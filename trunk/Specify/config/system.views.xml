<?xml version="1.0" encoding="UTF-8"?>
<viewset name="SystemSetup" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
    <views>
        <view name="PickList"
            class="edu.ku.brc.specify.ui.db.PickList"
            resourcelabels="false"
            >
            <desc><![CDATA[The Collection Object form.]]></desc>
            <altviews>
                <altview name="Pick List View" viewdef="PickList" label="View" mode="view" validated="false"/>
                <altview name="Pick List Edit" viewdef="PickList" label="Edit" mode="edit" validated="true" default="true"/>
            </altviews>
            
        </view>
        
        <view name="DatabaseLogin"
            class="java.util.Hashtable"
            resourcelabels="false">
            <desc><![CDATA[Database Login]]></desc>
            <altviews>
                <altview name="DatabaseLogin" viewdef="DatabaseLogin" label="Edit" mode="edit" validated="true" default="true"/>
            </altviews>
        </view>
        
    </views>
  
    <viewdefs>
        <viewdef
            type="form"
            name="PickList"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            gettable="edu.ku.brc.specify.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.specify.ui.forms.DataSetterForObj">
            
            
            <desc><![CDATA[Form for editing an Info Request]]></desc>
            <enableRules>
                <rule name="sizeLimit"><![CDATA[readOnly.isSelected() == false]]></rule>
                <rule name="RemoveItem"><![CDATA[items.getSelectedIndex() != -1]]></rule>
                <rule name="AddItem"><![CDATA[title.isNotEmpty() && value.isNotEmpty()]]></rule>
                <rule name="name"><![CDATA[dataObj.getCreated() == null]]></rule>
                <rule name="deletePL"><![CDATA[dataObj.getCreated() != null && processor.getNumUsed() == 0]]></rule>
            </enableRules>
            <columnDef>r:p, 2dlu, l:p</columnDef>
            <rowDef>p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p</rowDef>
            <rows>
                <row>
                    <cell type="separator" label="Pick List" colspan="3"/>
                </row>
                <row>
                    <cell type="label" labelfor="name" label="Name"/>
                    <cell type="field" id="name" name="name" isrequired="true" valtype="Changed">
                        <validation><![CDATA[processor.doEvaluate()]]></validation>
                    </cell>
                </row>
                <row>
                    <cell type="label" labelfor="readOnly" label=""/>
                    <cell type="field" id="readOnly" name="readOnly" label="Read Only" uitype="checkbox" />
                </row>
                <row>
                    <cell type="label" labelfor="sizeLimit" label="Size Limit"/>
                    <cell type="field" id="sizeLimit" name="sizeLimit" cols="5" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="items" label="Items"/>
                    <cell type="panel" id="outerPanel" name="outerPanel" coldef="max(120px;p),5px,p" rowdef="p">
                        <rows>
                            <row>
                                <cell type="field" id="items" name="items" uitype="list"/>
                                <cell type="panel" id="innerPanel" name="innerPanel" coldef="p" rowdef="p,20px,p">
                                    <rows>
                                        <row>
                                            <cell type="command" id="RemoveItem" name="RemoveItem" label="Remove Item" commandtype="" action="" ignore="true"/>
                                        </row>
                                        <row>
                                            <cell type="command" id="AddItem" name="AddItem" label="Add Item" commandtype="" action="" ignore="true"/>
                                        </row>
                                    </rows>
                                </cell>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="label" labelfor="title" label="Item Title"/>
                    <cell type="field" id="title" name="title" cols="25" ignore="true" changesonly="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="value" label="Value"/>
                    <cell type="field" id="value" name="value" cols="25" ignore="true" changesonly="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="value" label="Used In Forms" />
                    <cell type="field" id="value" name="usedInForms" uitype="list" ignore="true" initialize="rows=5"/>
                </row>
                <row>
                    <cell type="panel" id="btnPanel" name="btnPanel" paneltype="buttonbar" colspan="3">
                        <rows>
                            <row>
                                <cell type="command" id="deletePL" name="deletePL" label="Delete" commandtype="" action="" ignore="true"/>
                                <cell type="command" id="savePL" name="savePL" label="Save Changes" commandtype="" action="" ignore="true"/>
                            </row>
                        </rows>
                    </cell>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="DatabaseLoginOld"
            class="java.util.Hashtable"
            gettable="edu.ku.brc.specify.ui.forms.DataGetterForHashMap"
            settable="edu.ku.brc.specify.ui.forms.DataSetterForHashMap">
            
            <desc><![CDATA[Database Logon]]></desc>
            <enableRules>
                <rule name="login"><![CDATA[username.isNotEmpty() && password.isNotEmpty() && servers.getComboBox().getSelectedIndex() > -1  && databases.getComboBox().getSelectedIndex() > -1]]></rule>
                <!-- <rule name="databases"><![CDATA[items.getSelectedIndex() != -1]]></rule> -->
            </enableRules>
            <columnDef>p,3dlu,p,3dlu,p:g</columnDef>
            <rowDef>p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p</rowDef>
            
            <rows>
                <row>
                    <cell type="field" id="image" uitype="image" initialize="edit=false"/>
                    <cell type="separator" label="Specify Login" colspan="3"/>
                </row>
                <row>
                    <cell type="label" labelfor="username" label="Username"/>
                    <cell type="field" id="username" name="Username" uitype="text" isrequired="true" valtype="Changed"/>
                </row>
                <row>
                    <cell type="label" labelfor="password" label="Password"/>
                    <cell type="field" id="password" name="password" uitype="password" isrequired="true" valtype="Changed"/>
                </row>
                <row>
                    <cell type="label" labelfor="databases" label="Databases"/>
                    <cell type="field" id="databases" name="databases" uitype="combobox" initialize="editable=true" isrequired="true" valtype="Changed"/>
                </row>
                <row>
                    <cell type="label" labelfor="servers" label="Servers"/>
                    <cell type="field" id="servers" name="servers" uitype="combobox" initialize="editable=true" isrequired="true" valtype="Changed"/>
                </row>
                <row>
                    <cell type="panel" id="btnPanel" name="btnPanel" paneltype="buttonbar" colspan="3">
                        <rows>
                            <row>
                                <cell type="command" id="login" name="login" label="Login" commandtype="" action="" ignore="true"/>
                                <cell type="command" id="cancel" name="cancel" label="Cancel" commandtype="" action="" ignore="true"/>
                            </row>
                        </rows>
                    </cell>
                </row>                
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="DatabaseLogin"
            class="java.util.Hashtable"
            gettable="edu.ku.brc.specify.ui.forms.DataGetterForHashMap"
            settable="edu.ku.brc.specify.ui.forms.DataSetterForHashMap">
            
            <desc><![CDATA[Database Logon]]></desc>
            <enableRules>
                <rule name="login"><![CDATA[username.isNotEmpty() && password.isNotEmpty() && servers.isNotEmpty() && databases.isNotEmpty() && views.isNotEmpty()]]></rule>
                <rule name="rememberuser"><![CDATA[!autologin.isSelected()]]></rule>
                <!-- <rule name="databases"><![CDATA[items.getSelectedIndex() != -1]]></rule> -->
            </enableRules>
            <columnDef>p,3dlu,p</columnDef>
            <rowDef>p,2dlu,p,2dlu,p</rowDef>
            
            <rows>                
                <row>
                    <cell type="field" id="image" uitype="image" initialize="edit=false;border=false;icon=SpecifyLargeIcon"/>
                    <cell type="panel" id="uipanel" name="uipanel" coldef="p,3dlu,max(220px;p)" rowdef="p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p">
                        <rows>
                            <row>
                                <cell type="separator" label="Specify Login" colspan="3"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="username" label="Username"/>
                                <cell type="field" id="username" name="Username" uitype="text" isrequired="true" valtype="Changed"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="password" label="Password"/>
                                <cell type="field" id="password" name="password" uitype="password" isencrypted="true" isrequired="true" valtype="Changed"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="databases" label="Databases"/>
                                <cell type="field" id="databases" name="databases" uitype="combobox" initialize="editable=true" isrequired="true" valtype="Changed"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="views" label="Form Set"/>
                                <cell type="field" id="views" name="views" uitype="combobox" isrequired="true" valtype="Changed"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="servers" label="Servers"/>
                                <cell type="field" id="servers" name="servers" uitype="combobox" initialize="editable=true" isrequired="true" valtype="Changed"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="rememberuser" label=""/>
                                <cell type="field" id="rememberuser" name="rememberuser" label="Remember Username" uitype="checkbox"/>
                            </row>
                            <row>
                                <cell type="label" labelfor="autologin" label=""/>
                                <cell type="field" id="autologin" name="autologin" label="Automatically Login" uitype="checkbox"/>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="panel" id="btnPanel" name="btnPanel" paneltype="buttonbar" colspan="3">
                        <rows>
                            <row>
                                <cell type="command" id="login" name="login" label="Login" commandtype="" action="" ignore="true"/>
                                <cell type="command" id="cancel" name="cancel" label="Cancel" commandtype="" action="" ignore="true"/>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="statusbar" id="statusbar" name="statusbar" colspan="3"/>
                </row>                
                
            </rows>
        </viewdef>
        
    </viewdefs>
        
</viewset>
