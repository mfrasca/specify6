                    <cell type="label" labelfor="2" label="Sex"/>
                    <cell type="field" id="2" name="text2" uitype="combobox" picklist="BiologicalSex"/>
                    
                </row>
                <row>
                    <cell type="label" labelfor="3" label="Condition"/>
                    <cell type="field" id="3" name="text3" uitype="text"/>
