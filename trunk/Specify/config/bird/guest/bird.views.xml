    		    <row>
    		    </row>
    		    <row>
    		        <cell type="subview" id="26" name="collectingEvent" viewname="CollectingEventSub" colspan="13" initialize="noscrollbars=true;bgcolor=245,245,245;border=line;bordercolor=169,169,169;"/>
    		    </row>
    		    <row></row><row></row><row></row>
    			<row>
    			    <cell type="subview" viewname="Preparation" id="8" name="preparations" defaulttype="table" colspan="13" initialize="noscrollbars=true;bgcolor=245,245,245;border=line;bordercolor=169,169,169;"/>
    			</row>
    		    <row></row><row></row><row></row>
    		    <row>
    		        <cell type="subview" viewname="BirdAttributes" id="19" name="collectionObjectAttribute" colspan="13" initialize="noscrollbars=true;bgcolor=245,245,245;border=line;bordercolor=169,169,169;"/>
    		    </row>
    		    <row></row><row></row><row></row>
	          <row>
			  <cell type="separator" label="Attachments" colspan="13"/>
