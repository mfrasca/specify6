<?xml version="1.0" encoding="UTF-8"?>
<formats>
    <format name="AccessionNumber" class="edu.ku.brc.specify.datamodel.Accession" default="true">
        <autonumber field="number">edu.ku.brc.dbsupport.AutoNumberGeneric</autonumber>
        <field size="4" type="year" value="YEAR" byyear="true"/>
        <field size="1" type="separator" value="-"/>
        <field size="2" type="alphanumeric" value="AA"/>
        <field size="1" type="separator" value="-"/>
        <field size="3" type="numeric" value="NNN" inc="true"/>
    </format>
    
    <format name="LoanNumber" class="edu.ku.brc.specify.datamodel.Loan" default="true">
        <field size="4" type="year" value="YEAR" byyear="true"/>
        <field size="1" type="separator" value="-"/>
        <field size="3" type="numeric" value="NNN" inc="true"/>
    </format>
    
    <format name="InfoRequestNumber" class="edu.ku.brc.specify.datamodel.InfoRequest" default="true">
        <field size="4" type="numeric" value="YEAR"/>
        <field size="1" type="separator" value="-"/>
        <field size="3" type="numeric" value="NNN" inc="true"/>
    </format>
    
    <format name="Date" type="date"/>
    <format name="PartialDateMonth" type="date" partialdate="Month"/>
    <format name="PartialDateYear" type="date" partialdate="Year"/>
    
    <format name="CatalogNumber" class="edu.ku.brc.specify.datamodel.CollectionObject" default="true">
        <autonumber field="catalogNumber">edu.ku.brc.dbsupport.AutoNumberGeneric</autonumber>
        <field size="4" type="year" value="YEAR"/>
        <field size="1" type="separator" value="-"/>
        <field size="6" type="numeric" value="NNNNNN" inc="true"/>
    </format>
    
    <!-- ***********************************************************************************************
         Note: This isn't needed but is provided as an example if someone wants to provide their own
         *********************************************************************************************** -->
