                </row>
                <row>
                    <cell type="label" labelfor="valtextcolor" label="Error Color"/>
                    <cell type="field" uitype="colorchooser" id="valtextcolor" name="ui.formatting.valtextcolor"/>
                </row>
                
                <row>
