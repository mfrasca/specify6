<?xml version="1.0" encoding="UTF-8"?>
<viewset name="SystemSetup" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
    <views>
        <view name="PickList"
            class="edu.ku.brc.specify.ui.db.PickList"
            resourcelabels="false"
            >
            <desc><![CDATA[The Collection Object form.]]></desc>
            <altviews>
                <altview name="Pick List View" viewdef="PickList" label="View" mode="view" validated="false"/>
                <altview name="Pick List Edit" viewdef="PickList" label="Edit" mode="edit" validated="true" default="true"/>
            </altviews>
            
        </view>
        
    </views>
  
    <viewdefs>
        <viewdef
            type="form"
            name="PickList"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            
            <desc><![CDATA[Form for editing an Info Request]]></desc>
            <enableRules>
                <rule id="sizeLimit"><![CDATA[readOnly.isSelected() == false]]></rule>
                <rule id="RemoveItem"><![CDATA[items.getSelectedIndex() != -1]]></rule>
                <rule id="AddItem"><![CDATA[title.isNotEmpty() && value.isNotEmpty()]]></rule>
                <rule id="name"><![CDATA[dataObj.getCreated() == null]]></rule>
                <rule id="deletePL"><![CDATA[dataObj.getCreated() != null && processor.getNumUsed() == 0]]></rule>
            </enableRules>
            <columnDef>r:p, 2dlu, l:p</columnDef>
            <rowDef>p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p, 2dlu, p</rowDef>
            <rows>
                <row>
                    <cell type="separator" label="Pick List" colspan="3"/>
                </row>
                <row>
                    <cell type="label" labelfor="name" label="Name"/>
                    <cell type="field" id="name" name="name" isrequired="true" valtype="Changed">
                        <validation><![CDATA[processor.doEvaluate()]]></validation>
                    </cell>
                </row>
                <row>
                    <cell type="label" labelfor="readOnly" label=""/>
                    <cell type="field" id="readOnly" name="readOnly" label="Read Only" uitype="checkbox" />
                </row>
                <row>
                    <cell type="label" labelfor="sizeLimit" label="Size Limit"/>
                    <cell type="field" id="sizeLimit" name="sizeLimit" cols="5" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="items" label="Items"/>
                    <cell type="panel" id="outerPanel" name="outerPanel" coldef="max(120px;p),5px,p" rowdef="p">
                        <rows>
                            <row>
                                <cell type="field" id="items" name="items" uitype="list"/>
                                <cell type="panel" id="innerPanel" name="innerPanel" coldef="p" rowdef="p,20px,p">
                                    <rows>
                                        <row>
                                            <cell type="command" id="RemoveItem" name="RemoveItem" label="Remove Item" commandtype="" action="" ignore="true"/>
                                        </row>
                                        <row>
                                            <cell type="command" id="AddItem" name="AddItem" label="Add Item" commandtype="" action="" ignore="true"/>
                                        </row>
                                    </rows>
                                </cell>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="label" labelfor="title" label="Item Title"/>
                    <cell type="field" id="title" name="title" cols="25" ignore="true" changesonly="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="value" label="Value"/>
                    <cell type="field" id="value" name="value" cols="25" ignore="true" changesonly="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="value" label="Used In Forms" />
                    <cell type="field" id="value" name="usedInForms" uitype="list" ignore="true" initialize="rows=5"/>
                </row>
                <row>
                    <cell type="panel" id="btnPanel" name="btnPanel" paneltype="buttonbar" colspan="3">
                        <rows>
                            <row>
                                <cell type="command" id="deletePL" name="deletePL" label="Delete" commandtype="" action="" ignore="true"/>
                                <cell type="command" id="savePL" name="savePL" label="Save Changes" commandtype="" action="" ignore="true"/>
                            </row>
                        </rows>
                    </cell>
                </row>
            </rows>
        </viewdef>
        
    </viewdefs>
        
</viewset>
