    <typesearch tableid="10"  name="CollectingEvent"        searchfield="stationFieldNumber" displaycols="stationFieldNumber" format="%s" dataobjformatter="CollectingEventSFN">
        SELECT %s1 FROM CollectingEvent ce JOIN ce.disciplines as dsp WHERE dsp.disciplineId = DSPLNID AND %s2
    </typesearch>
    <typesearch tableid="26"  name="Discipline"             searchfield="name"            displaycols="name"               format="%s"     dataobjformatter=""/>
