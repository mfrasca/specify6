<typesearches>
    <typesearch tableid="7"   name="Accession"              searchfield="accessionNumber" displaycols="accessionNumber"    format="%s"     dataobjformatter=""/>
    <typesearch tableid="5"   name="Agent"                  searchfield="ag.lastName"        displaycols="ag.lastName,ag.firstName" format="%s, %s" dataobjformatter="Agent">
        SELECT %s1 FROM Agent ag JOIN ag.disciplines as dsp WHERE dsp.disciplineId = DSPLNID AND %s2
    </typesearch>
    <typesearch tableid="67"  name="Appraisal"              searchfield="appraisalNumber" displaycols="appraisalNumber"    format="%s"     dataobjformatter=""/>
    <typesearch tableid="46"  name="BioStrat"               searchfield="gtp.name"        displaycols="gtp.fullName"       format="%s"     dataobjformatter="">
        SELECT %s1 FROM GeologicTimePeriod gtp JOIN gtp.definition as gtpd WHERE gtpd.geologicTimePeriodTreeDefId = GTPTREEDEFID AND gtp.isBioStrat = 1 AND %s2
    </typesearch>
    <typesearch tableid="46"  name="ChronosStrat"           searchfield="name"            displaycols="fullName"           format="%s"     dataobjformatter=""/>
