<?xml version="1.0" encoding="UTF-8"?>
<viewset name="Botany Views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <views>
        <view name="CollectingEvent"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            busrules="edu.ku.brc.specify.datamodel.busrules.CollectingEventBusRules"
            isinternal="false"
            resourcelabels="false">
            <desc><![CDATA[CollectingEvent Form]]></desc>
            <altviews>
                <altview name="CollectingEvent View" viewdef="CollectingEvent" label="View" mode="view" default="true"/>
                <altview name="CollectingEvent Edit" viewdef="CollectingEvent" label="Edit" mode="edit"/>
            </altviews>
        </view>
        
        <view name="CollectingEventSub"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            busrules="edu.ku.brc.specify.datamodel.busrules.CollectingEventBusRules"
            resourcelabels="false">
            <desc><![CDATA[CollectingEvent Form]]></desc>
            <altviews>
                <altview name="CollectingEventSub View" viewdef="CollectingEventSub" label="View" mode="view" default="true"/>
                <altview name="CollectingEventSub Edit" viewdef="CollectingEventSub" label="Edit" mode="edit"/>
            </altviews>
        </view>    
        
        <view name="CollectionObject"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            busrules="edu.ku.brc.specify.datamodel.busrules.CollectionObjectBusRules"
            isinternal="false"
            resourcelabels="false"
            >
            <desc><![CDATA[The Collection Object form.]]></desc>
            <altviews>
                <altview name="Collection Object View" viewdef="Collection Object" label="View" mode="view"/>
                <altview name="Collection Object Edit" viewdef="Collection Object" label="Edit" mode="edit" default="true"/>
            </altviews>
        </view>
        
        <view name="Determination"
            class="edu.ku.brc.specify.datamodel.Determination"
            busrules="edu.ku.brc.specify.datamodel.busrules.DeterminationBusRules"
            isinternal="true"
            resourcelabels="false">
            <desc><![CDATA[Subform within the Collection Object form.]]></desc>
            <altviews>
                <altview name="Determination View"       viewdef="Determination" label="View" mode="view"/>
                <altview name="Determination Edit"       viewdef="Determination" label="Edit" mode="edit" default="true"/>
                <altview name="Determination Table View" viewdef="Determination Table" label="Grid" mode="view"/>
                <altview name="Determination Table Edit" viewdef="Determination Table" label="Grid" mode="edit"/>
            </altviews>
        </view>
        
    </views>
    
    
    <viewdefs>
        
        <viewdef
            type="form"
            name="Collection Object"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[The Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>110px,2px,p,2px,100px,2px,p,2px,p,2px,p,2px,p,2px,p,p:g,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            <rows>
                <row>
                    <cell type="label" label="Botany" icon="CollectionObject" recordobj="true" colspan="18"/>
                </row>
                <row>
                    <cell type="label" labelfor="1"/>
                    <cell type="field" id="1" name="catalogNumber" uitype="formattedtext"/>
                    
                    <cell type="label" labelfor="2" label="Collection"/>
                    <cell type="field" id="2" name="collection.collectionName" uitype="dsptextfield"/>
                    
                    <cell type="label" labelfor="15" label="Collector No"/>
                    <cell type="field" id="15" name="field number" uitype="text"/>
                </row>
                <row>
                    <cell type="label" labelfor="3"/>
                    <cell type="field" id="3" name="accession" uitype="querycbx" initialize="name=Accession;title=Accession" isrequired="false"/>
                    
                    <cell type="label" labelfor="4"/>
                    <cell type="field" id="4" name="cataloger" uitype="querycbx" initialize="name=Agent;title=Catalog Agent;editoncreate=true" isrequired="true"/>
                    
                    <cell type="label" labelfor="5"/>
                    <cell type="field" id="5" name="catalogedDate" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                    <!-- <cell type="field" id="5" name="this" uitype="plugin" initialize="name=PartialDateUI;dateField=catalogedDate;dateTypeField=text1" default="today"/> -->
                </row>
                <row>
                    <cell type="separator" label="Determination" collapse="determinations" colspan="18"/>
                </row>
                
                <row>
                    <cell type="subview" viewname="Determination" id="6" name="determinations" colspan="18" rows="5"/>
                </row>
                <row>
                    <cell type="separator" label=" " colspan="18"/>
                </row>
                <row>
                    <cell type="label" labelfor="20" label="Phenology"/>
                    <cell type="field" id="20" name="text1" uitype="combobox" picklist="Phenology" colspan="4"/>
                </row>
                <row>
                    <cell type="label" labelfor="18" label="Specimen\nDescription"/>
                    <cell type="field" id="18" name="description" uitype="textarea" colspan="16"/>
                </row>
                <row>
                    <cell type="separator" label="Collecting Event" colspan="18" collapse="collectingEvent"/>
                </row>
                <row>
                    <cell type="subview" viewname="CollectingEventSub" name="collectingEvent" id="17" colspan="18"/>
                </row>
                <!--   <row>
                    <cell type="field" id="7" name="collectingEvent.locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="12"/>
                    </row>  -->	
                <row>
                    <cell type="separator" label="Preparations" collapse="preparations" colspan="18"/>
                </row>
                <row>
                    <cell type="subview" viewname="Preparation" id="8" name="preparations" defaulttype="table" colspan="18"/>
                </row>
                <row>
                    <cell type="separator" label="Attachments" colspan="18"/>
                </row>
                
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectionObjectAttachments" colspan="18" initialize="btn=true;icon=CollectionObjectAttachment"/>
                </row>
                <row>
                    <cell type="separator" label="" colspan="18"/>
                </row>
                
                <row>
                    <cell type="label" labelfor="10" label="Edited By"/>
                    <cell type="field" id="10" name="modifiedByAgent" uitype="label" readonly="true"  uifieldformatter="Agent"/>
                    
                    <cell type="label" labelfor="11" label="Last Edited"/>
                    <cell type="field" id="11" name="timestampModified" uitype="label" readonly="true" cols="20" colspan="2"/>
                </row>
                
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEvent"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Collecting Event]]></desc>
            <columnDef>110px,2px,p,5px,p,2px,p,5px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" label="Collecting Event" icon="CollectingEvent" recordobj="true" colspan="12"/>
                </row>
                <row>
                    <cell type="label" labelfor="1"/>
                    <cell type="field" id="1" name="stationFieldNumber" uitype="text"/>
                    <cell type="label" labelfor="2"/>
                    <cell type="field" id="2" name="startDate" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                </row>
                <row>
                    <cell type="label" labelfor="4"/>
                    <cell type="field" id="4" name="locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="6" label="Locality and\n Habitat Notes"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="10" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5"/>
                    <cell type="subview" viewname="Collectors" id="5" name="collectors" colspan="10"/>
                </row>
                <row>
                    <cell type="separator" label="Attachments" colspan="12"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectingEventAttachments" colspan="12" initialize="btn=true;icon=CollectingEventAttachment"/>
                </row>
                <!--
                    <row>
                    <cell type="label" labelfor="7" label="Geography"/>
                    <cell type="field" id="7" name="geography" uitype="querycbx" initialize="name=Geography;title=Geography" isrequired="true"/>
                    </row>
                -->
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEventSub"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Collecting Event]]></desc>
            <columnDef>p,2px,p,5px,p,2px,p,5px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" labelfor="2"/>
                    <cell type="field" id="2" name="startDate" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                </row>
                <row>
                    <cell type="label" labelfor="4"/>
                    <cell type="field" id="4" name="locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="6" label="Locality and\n Habitat Notes"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="10" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5"/>
                    <cell type="subview" viewname="Collectors" id="5" name="collectors" colspan="10"/>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            name="Determination Table"
            type="formtable"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform table for Collection Object form.]]></desc>
            <definition>Determination</definition>
        </viewdef>
        
        <viewdef
            name="Determination"
            type="form"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform for Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>90px,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,p:g</columnDef>
            <!-- <rowDef>p,2dlu,p,2dlu,p,2dlu,p:g,2dlu</rowDef>  -->
            <rowDef auto="true" cell="p" sep="2px"/>
            <rows>
                <row>
                    <cell type="label" labelfor="1"/>
                    <cell type="field" id="1" name="taxon" uitype="querycbx" initialize="name=Taxon;title=Taxon;editbtn=false;newbtn=true" colspan="5"/>
                    
                    <cell type="label" labelfor="2"/>
                    <cell type="field" id="2" name="status" uitype="combobox" picklist="DeterminationStatus" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="3"/>
                    <cell type="field" id="3" name="determiner" uitype="querycbx" initialize="name=Agent;title=Determiner Agent" isrequired="true"/>
                    
                    <cell type="label" labelfor="4"/>
                    <cell type="field" id="4" name="typeStatusName" uitype="combobox" picklist="TypeStatus"/>
                    
                    <!--    <cell type="label" labelfor="5" label="Date"/>
                        <cell type="field" id="5" name="determinedDate" isrequired="true" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                        
                        <cell type="field" id="7" name="yesNo1" uitype="checkbox" label="In Question"/> -->
                </row>
                
                <row>
                    <cell type="label" labelfor="6"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="14" cols="50"/>
                </row>
            </rows>
        </viewdef>
        
        
    </viewdefs>
</viewset>

