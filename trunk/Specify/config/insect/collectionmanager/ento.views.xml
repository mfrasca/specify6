    <viewdefs>
    
        <viewdef
            type="form"
            name="Collection Object"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">

            <desc><![CDATA[The Collection Object form.]]></desc>
            <enableRules/>

            <columnDef>90px,2px,p,2px,80px,2px,p,2px,100px,2px,p,p:g,p,p</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
    		<rows>
    		    <row>
    		        <cell type="label" label="Insect" icon="CollectionObject" recordobj="true" colspan="12"/>
    		    </row>
    			<row>
    			    <cell type="label" labelfor="1" label="Cat Num"/>
    			    <cell type="field" id="1" name="catalogNumber" uitype="formattedtext"/>

                    <cell type="label" labelfor="2" label="Collection"/>
    			    <cell type="field" id="2" name="collection.collectionName" uitype="dsptextfield"/>
    			    
    			    <cell type="label" labelfor="3" label="Accession #"/>
    			    <cell type="field" id="3" name="accession" uitype="querycbx" initialize="name=Accession;title=Accession" isrequired="false"/>
    			</row>
    		    <row>
    		        
    		        <cell type="label" labelfor="19" label="Stage"/>
    		        <cell type="field" id="19" name="text2" uitype="combobox" picklist="Stage" />
    		        
    		        <cell type="label" labelfor="23" label="Sex"/>
    		        <cell type="field" id="23" name="text1" uitype="combobox" picklist="Sex" />
    		        
    		        <cell type="label" labelfor="17" label="Place of Deposition"/>
    		        <cell type="field" id="17" name="description" uitype="text"/>
    		        
    		    </row>
     			<row>
    				<cell type="separator" label="Determination" collapse="determinations" colspan="12"/>
    			</row>

    			<row>
    			    <cell type="subview" viewname="Determination" id="6" name="determinations" colspan="12" rows="5"/>
    			</row>    		    
    		    <row>
    		        <cell type="separator" label="Collecting Event" collapse="collectingEvent" colspan="12"/>
    		    </row>
    		    <row>
    		        <cell type="subview" viewname="CollectingEventSub" id="18" name="collectingEvent" colspan="12"/>
    		    </row>
    			<row>
    			    <cell type="separator" label="Preparations" collapse="preparations" colspan="12"/>
    			</row>
    			<row>
    			    <cell type="subview" viewname="Preparation" id="8" name="preparations" defaulttype="table" colspan="12"/>
    			</row>

    		    <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectionObjectAttachments" colspan="12" initialize="btn=true;icon=CollectionObject"/>
                </row>
    			<row>
    				<cell type="separator" label="" colspan="12"/>
    			</row>
    			
    			<row>

                    <cell type="label" labelfor="10" label="Edited By"/>
    			    <cell type="field" id="10" name="modifiedByAgent" uitype="label" readonly="true"  uifieldformatter="Agent"/>

                    <cell type="label" labelfor="11" label="Last Edited"/>
    			    <cell type="field" id="11" name="timestampModified" uitype="label" readonly="true" cols="20" colspan="2"/>
    			</row>
    			
    		</rows>
    	</viewdef>

        <viewdef
            type="form"
            name="CollectingEvent"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">

            <desc><![CDATA[Collecting Event]]></desc>
            <columnDef>p,2px,p,5px,p,2px,p,5px,p,2px,p,2px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" label="Collecting Event" icon="CollectingEvent" recordobj="true" colspan="16"/>
                </row>
                <row>
                    <cell type="label" labelfor="1" label="Field Number/Event"/>
                    <cell type="field" id="1" name="stationFieldNumber" uitype="text"/>
                    <cell type="label" labelfor="3" label="Method"/>
                    <cell type="field" id="3" name="method" uitype="combobox" picklist="Method"/>
                </row>
                <row>
                    <cell type="label" labelfor="2" label="Start Date"/>
                    <cell type="field" id="2" name="startDate" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                    <cell type="label" labelfor="10" label="End Date"/>
                    <cell type="field" id="10" name="endDate" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                    
                    <cell type="label" labelfor="9" label="Start Time"/>
                    <cell type="field" id="9" name="startTime" uitype="text"/>
                    <cell type="label" labelfor="7" label="End Time"/>
                    <cell type="field" id="7" name="endTime" uitype="text"/> 
                </row>
                <row>
                    <cell type="label" labelfor="4" label="Locality"/>
                    <cell type="field" id="4" name="locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="14"/> 
                </row>

                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="14" rows="3" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Collectors"/>
                    <cell type="subview" viewname="Collectors" id="8" name="collectors" colspan="14" rows="3"/>
                </row>
                <row>
                    <cell type="separator" label="Attachments" collapse="collectingEventAttachments" colspan="16"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectingEventAttachments" colspan="16" initialize="btn=true;icon=CollectingEvent"/>
                </row>
                <!--
                <row>
                    <cell type="label" labelfor="7" label="Geography"/>
                    <cell type="field" id="7" name="geography" uitype="querycbx" initialize="name=Geography;title=Geography" isrequired="true"/>
                </row>
                -->
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEventSub"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
