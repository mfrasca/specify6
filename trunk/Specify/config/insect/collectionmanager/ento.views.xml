                </row>
               
                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="14" rows="3" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Collectors"/>
                    <cell type="subview" viewname="Collectors" id="8" name="collectors" colspan="14" rows="3"/>
                </row>
            </rows>
        </viewdef>

<viewdef
            name="Determination Table"
            type="formtable"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform table for Collection Object form.]]></desc>
            <definition>Determination</definition>
        </viewdef>
        
        <viewdef
            name="Determination"
            type="form"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform for Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>90px,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,p:g</columnDef>
            <rowDef>p,2dlu,p,2dlu,p,2dlu,p:g,2dlu</rowDef>
            
            <rows>
                <row>
                    <cell type="label" labelfor="1" label="Taxon"/>
                    <cell type="field" id="1" name="taxon" uitype="querycbx" initialize="name=Taxon;title=Taxon;editbtn=false;newbtn=true" colspan="5"/>
                    
                    <cell type="label" labelfor="2" label="Status"/>
                    <cell type="field" id="2" name="status" uitype="combobox" picklist="DeterminationStatus" isrequired="true"/>
                    
                </row>
                <row>
                    <cell type="label" labelfor="3" label="Determiner"/>
                    <cell type="field" id="3" name="determiner" uitype="querycbx" initialize="name=Agent;title=Determiner Agent" isrequired="true"/>
                    
                    <cell type="label" labelfor="4" label="Type Status"/>
                    <cell type="field" id="4" name="typeStatusName" uitype="text"/>
                    
                    <cell type="label" labelfor="5" label="Date"/>
                    <cell type="field" id="5" name="determinedDate" isrequired="true" uitype="formattedtext" uifieldformatter="Date" default="today"/>
                    
                    <cell type="label" labelfor="9" label="Confidence"/>
                    <cell type="field" id="9" name="confidence" uitype="combobox" picklist="Confidence"/>
                </row>
                
                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="14" cols="50"/>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="Locality"
            class="edu.ku.brc.specify.datamodel.Locality"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Locality]]></desc>
            <columnDef>p,2px,p,5px,p,2px,p,5px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2dlu"/>
            
            <rows>
                <row>
                    <cell type="separator" label="Locality Information" colspan="12"/>
                </row>
                <row>
                    <cell type="label" labelfor="3" label="Name"/>
                    <cell type="field" id="3" name="localityName" uitype="text" isrequired="true" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="1" label="Legal Description"/>
                    <cell type="field" id="1" name="namedPlace" uitype="text" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="4" label="Geography"/>
                    <cell type="field" id="4" name="geography" uitype="querycbx" initialize="name=Geography;title=Geography" isrequired="true" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Lat/Lon"/>
                    <cell type="field" id="5" name="this" uitype="plugin" initialize="name=LatLonUI" colspan="10"/>
                </row>
                <row>
                    <cell type="separator" label="Tools" colspan="12"/>
                </row>
                <row>
                    <cell type="panel" id="outerPanel" name="outerPanel" coldef="p,f:p:g,p,f:p:g,p,f:p:g" rowdef="p" colspan="12">
                        <rows>
                            <row>
                                <cell type="label" label=" "/>
                                <cell type="field" id="23" name="this" uitype="plugin" initialize="name=LocalityGeoRef;title=Geo Ref" colspan="1"/>
                                <cell type="field" id="24" name="this" uitype="plugin" initialize="name=LocalityGoogleEarth;title=Google Earth" colspan="1"/>
                            </row>
                        </rows>
                    </cell>
                </row>
                <row>
                    <cell type="separator" label="Attachments" colspan="12"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="localityAttachments" colspan="12" initialize="btn=true;icon=Locality"/>
                </row>
            </rows>
        </viewdef>


        
    </viewdefs>
