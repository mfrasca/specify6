    <viewdefs>
        
        <viewdef
            type="form"
            name="Attributes"
            class="edu.ku.brc.specify.datamodel.CollectionObjectAttributes"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Form For OtherIdentifier]]></desc>
            <columnDef>75px,2px,150px,2px,p,2px,150px,2px,p,2px,150px,p:g</columnDef>
            <rowDef auto="true" sep="2px" cell="p"/>
            <rows>
                <row>
                    <cell type="label" labelfor="1" label="Sex"/>
                    <cell type="field" id="1" name="text1" uitype="combobox" picklist="BiologicalSex"/>
                    <cell type="label" labelfor="2" label="Stage"/>
                    <cell type="field" id="2" name="text2" uitype="combobox" picklist="Stage"/>
                    <cell type="label" labelfor="3" label="ReproCondition"/>
                    <cell type="field" id="3" name="text3" uitype="text"/>
                </row>
                <row>
                    <cell type="label" labelfor="20" label="SVL"/>
                    <cell type="field" id="20" name="text6" uitype="text"/>
                    <cell type="label" labelfor="21" label="Tail Length"/>
                    <cell type="field" id="21" name="text4" uitype="text"/>
                    <cell type="label" labelfor="4" label="Total Length"/>
                    <cell type="field" id="4" name="text5" uitype="text"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Color in Life"/>
                    <cell type="field" id="5" name="text7" uitype="text"/>
                </row>
                <row>
                    <cell type="label" labelfor="22" label="Remarks"/>
                    <cell type="field" id="22" name="text14" uitype="textarea" colspan="10" rows="3"/>
                </row> 

            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="Collection Object"
            class="edu.ku.brc.specify.datamodel.CollectionObject"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[The Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>90px,2px,p,2px,100px,2px,p,2px,p,2px,p,2px,p,2px,p,p:g,p,p</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            <rows>
                <row>
                    <cell type="label" label="Reptile" icon="CollectionObject" recordobj="true" colspan="16"/>
                </row>
                <row>
                    <cell type="label" labelfor="1" label="Cat Num"/>
                    <cell type="field" id="1" name="catalogNumber" uitype="formattedtext"/>
                    
                    <cell type="label" labelfor="2" label="Collection"/>
                    <cell type="field" id="2" name="collection.collectionName" uitype="dsptextfield"/>
                    
                    <cell type="label" labelfor="4" label="Field No"/>
                    <cell type="field" id="4" name="fieldNumber" uitype="text"/>
                    
                    <cell type="label" labelfor="3" label="Accession #"/>
                    <cell type="field" id="3" name="accession" uitype="querycbx" initialize="name=Accession;title=Accession" isrequired="false"/>
                </row>
                <row>
                    <cell type="separator" label="Determination" collapse="determinations" colspan="16"/>
                </row>
                
                <row>
                    <cell type="subview" viewname="Determination" id="6" name="determinations" colspan="16" rows="5"/>
                </row>
                <row>
                    <cell type="separator" label="Collecting Event" colspan="16" collapse="collectingEvent"/>
                </row>
                <row>
                    <cell type="subview" viewname="CollectingEventSub" id="17" name="collectingEvent" colspan="16"/>
                </row>
                <row>
                    <cell type="separator" label="Preparations" collapse="preparations" colspan="16"/>
                </row>
                <row>
                    <cell type="subview" viewname="Preparation" id="8" name="preparations" defaulttype="table" colspan="16"/>
                </row>
                <row>
                    <cell type="separator" label="Attributes" collapse="collectionObjectAttributes" colspan="16"/>
                </row>
                <row>
                   <cell type="subview" viewname="Attributes" id="19" name="collectionObjectAttributes" colspan="16"/> 
                </row>
                <row>
                    <cell type="separator" label="Attachments" colspan="16"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectionObjectAttachments" colspan="16" initialize="btn=true;icon=CollectionObject"/>
                </row>
                <row>
                    <cell type="separator" label="" colspan="16"/>
                </row>
                
                <row>
                    <cell type="label" labelfor="10" label="Edited By"/>
                    <cell type="field" id="10" name="modifiedByAgent" uitype="label" readonly="true"  uifieldformatter="Agent"/>
                    
                    <cell type="label" labelfor="11" label="Last Edited"/>
                    <cell type="field" id="11" name="timestampModified" uitype="label" readonly="true" cols="20" colspan="2"/>
                </row>
                
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEvent"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Collecting Event]]></desc>
            <columnDef>p,2px,p,5px,p,2px,p,5px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" label="Collecting Event" icon="CollectingEvent" recordobj="true" colspan="12"/>
                </row>
                <row>
                    <cell type="label" labelfor="2" label="CollectionDate"/>
                    <cell type="field" id="2" name="startDate" uitype="formattedtext" uifieldformatter="Date"/>
                    <cell type="label" labelfor="1" label="Verbatim Date"/>
                    <cell type="field" id="1" name="verbatimDate" uitype="text"/>
                    <cell type="label" labelfor="3" label="Method"/>
                    <cell type="field" id="3" name="method" uitype="combobox" dspuitype="dsptextfield" picklist="CollectingMethod"/>
                </row>
                <row>
                    <cell type="label" labelfor="4" label="Locality"/>
                    <cell type="field" id="4" name="locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="10" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Collectors"/>
                    <cell type="subview" viewname="Collectors" id="8" name="collectors" colspan="10"/>
                </row>
                <row>
                    <cell type="separator" label="Attachments" collapse="collectingEventAttachments" colspan="12"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="collectingEventAttachments" colspan="12" initialize="btn=true;icon=CollectingEvent"/>
                </row>
                <!--
                    <row>
                    <cell type="label" labelfor="7" label="Geography"/>
                    <cell type="field" id="7" name="geography" uitype="querycbx" initialize="name=Geography;title=Geography" isrequired="true"/>
                    </row>
                -->
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEventSub"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Collecting Event]]></desc>
            <columnDef>p,2px,p,5px,p,2px,p,5px,p,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2px"/>
            
            <rows>
                <row>
                    <cell type="label" labelfor="1" label="Site No"/>
                    <cell type="field" id="1" name="stationFieldNumber" uitype="text"/>
                    <cell type="label" labelfor="2" label="Collection Date"/>
                    <cell type="field" id="2" name="startDate" uitype="formattedtext" uifieldformatter="Date"/>
                </row>
                <row>
                    <cell type="label" labelfor="4" label="Locality"/>
                    <cell type="field" id="4" name="locality" uitype="querycbx" initialize="name=Locality;title=Locality" colspan="10"/>
                </row>
                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="10" cols="50"/>
                </row>
                <row>
                    <cell type="label" labelfor="5" label="Collectors"/>
                    <cell type="subview" viewname="Collectors" id="8" name="collectors" colspan="10"/>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            name="Determination Table"
            type="formtable"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform table for Collection Object form.]]></desc>
            <definition>Determination</definition>
        </viewdef>
        
        <viewdef
            name="Determination"
            type="form"
            class="edu.ku.brc.specify.datamodel.Determination"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Determination subform for Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>90px,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,2px,p,p:g</columnDef>
            <!-- <rowDef>p,2dlu,p,2dlu,p,2dlu,p:g,2dlu</rowDef>  -->
            <rowDef auto="true" cell="p" sep="2px"/>
            <rows>
                <row>
                    <cell type="label" labelfor="1" label="Taxon"/>
                    <cell type="field" id="1" name="taxon" uitype="querycbx" initialize="name=Taxon;title=Taxon;editbtn=false;newbtn=true" colspan="5"/>
                    
                    <cell type="label" labelfor="2" label="Status"/>
                    <cell type="field" id="2" name="status" uitype="combobox" picklist="DeterminationStatus" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="3" label="Determiner"/>
                    <cell type="field" id="3" name="determiner" uitype="querycbx" initialize="name=Agent;title=Determiner Agent" isrequired="true"/>
                    
                    <cell type="label" labelfor="4" label="Type Status"/>
                    <cell type="field" id="4" name="typeStatusName" uitype="combobox" picklist="TypeStatus"/>
                    
                </row>
                
                <row>
                    <cell type="label" labelfor="6" label="Remarks"/>
                    <cell type="field" id="6" name="remarks" uitype="textarea" colspan="14" cols="50"/>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            type="formtable"
            name="Preparation Table"
            class="edu.ku.brc.specify.datamodel.Preparation"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            
            <desc><![CDATA[Preparation subform table for Collection Object form.]]></desc>
            <definition>Preparation</definition>
        </viewdef>
        
        <viewdef
            type="form"
            name="Preparation"
            class="edu.ku.brc.specify.datamodel.Preparation"
            gettable="edu.ku.brc.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.ui.forms.DataSetterForObj">
            <desc><![CDATA[Preparation for Collection Object form.]]></desc>
            <enableRules/>
            
            <columnDef>120px,2px,p,2px,100px,2px,p,2px,60px,2px,p,p:g</columnDef>
            <rowDef auto="true" cell="p" sep="2dlu"/>
            
            <rows>
                <row>
                    <cell type="label" labelfor="7" label="Prep Method"/>
                    <cell type="field" id="7" name="prepType" uitype="combobox" picklist="CollObjPrepMeth" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="1" label="Prepared Date"/>
                    <cell type="field" id="1" name="preparedDate" uitype="formattedtext" uifieldformatter="Date" isrequired="true" default="today"/>
                    
                    <cell type="label" labelfor="2" label="Prepared By"/>
                    <cell type="field" id="2" name="preparedByAgent" uitype="querycbx" initialize="name=Agent;title=Prepared By Agent" isrequired="true"/>
                </row>
                <row>
                    <cell type="label" labelfor="3" label="Count"/>
                    <cell type="field" id="3" name="count" uitype="text" isrequired="true"/>
                    
                    <cell type="label" labelfor="4" label="Storage"/>
                    <cell type="field" id="4" name="storageLocation" uitype="text" cols="20"/>
                </row>
                <row>
                    <cell type="subview" id="attachments" viewname="ObjectAttachment" name="preparationAttachments" colspan="12" initialize="btn=true;icon=PreparationAttachment"/>
                </row>
            </rows>
        </viewdef>
        
        
    </viewdefs>
