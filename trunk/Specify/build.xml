		<!-- Tell OS the dir is an App -->
		<exec command="/Developer/Tools/SetFile -a B ${appdir}" />
		

		<!-- Copy Help -->
		<copy todir="${appdir}/Contents/Resources/Java/help">
			<fileset dir="help">
