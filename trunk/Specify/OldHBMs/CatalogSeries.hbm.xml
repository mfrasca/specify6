<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.CatalogSeries" table="catalogseries" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="catalogSeriesId" type="java.lang.Long" column="CatalogSeriesID">
        <meta attribute="field-description">Primary key</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>
    
    <property name="seriesName" type="java.lang.String" column="SeriesName" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Textual name for Catalog series. E.g. Main specimen collection</meta>
    </property>
    
    <property name="catalogSeriesPrefix" type="java.lang.String" column="CatalogSeriesPrefix" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Text Displayed with Catalog numbers. E.g. 'KU'</meta>
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-many association to CollectionObjDef -->
    <set name="collectionObjDefItems" table="catseries_colobjdef" lazy="true" cascade="save-update, lock, merge">
        <key>
            <column name="CatalogSeriesID"/>
        </key>
        <many-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef" column="CollectionObjDefID"/>
    </set>
    
    <!-- bi-directional one-to-many association to AppResourceDefault -->
    <set name="appResourceDefaults" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="CatalogSeriesID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AppResourceDefault"/>
    </set>
    
</class>
</hibernate-mapping>
