<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Author" table="author">
    <meta attribute="class-description" inherit="false"/>

    <id name="authorId" type="java.lang.Long" column="AuthorID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="orderNumber" type="short" column="OrderNumber" not-null="true" unique-key="IX_AuthorRefOrder">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to ReferenceWork -->
    <many-to-one name="referenceWork" class="edu.ku.brc.specify.datamodel.ReferenceWork"  cascade="none" index="IX_AuthorReferenceWorkID" unique-key="IX_AuthorRefOrder">
        <meta attribute="field-description">Reference record the Agent authored</meta>
        <column name="ReferenceWorkID" not-null="true"/>
    </many-to-one>

    <!-- bi-directional many-to-one association to Agent -->
    <many-to-one name="agent" class="edu.ku.brc.specify.datamodel.Agent" cascade="none" index="IX_AuthorAgentID">
        <meta attribute="field-description">Agent record representing the Author</meta>
        <column name="AgentID" not-null="true"/>
    </many-to-one>

</class>
</hibernate-mapping>
