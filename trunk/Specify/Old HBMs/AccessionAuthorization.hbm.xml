<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.AccessionAuthorization" table="accessionauthorization" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="accessionAuthorizationId" type="java.lang.Long" column="AccessionAuthorizationID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Permit -->
    <many-to-one name="permit" class="edu.ku.brc.specify.datamodel.Permit" outer-join="true" cascade="save-update" index="IX_AccessionAuthorizationPermitID" unique-key="IX_AccessionAuthorization">
        <meta attribute="field-description">Permit authorizing accession</meta>
        <column name="PermitID"  not-null="true"/>
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Accession -->
    <many-to-one name="accession" class="edu.ku.brc.specify.datamodel.Accession" outer-join="true" cascade="none" index="IX_AccessionAuthorizationAccessionID" unique-key="IX_AccessionAuthorization">
        <meta attribute="field-description">Accession authorized by permit</meta>
        <column name="AccessionID" not-null="false" />
    </many-to-one>
    
    <!-- bi-directional many-to-one association to RepositoryAgreement -->
    <many-to-one name="repositoryAgreement" class="edu.ku.brc.specify.datamodel.RepositoryAgreement" outer-join="true" cascade="none" index="IX_RepAccessionAuthorizationAccessionID" unique-key="IX_RepAccessionAuthorization">
        <meta attribute="field-description"></meta>
        <column name="RepositoryAgreementID" not-null="false"/>
    </many-to-one>
    
</class>
</hibernate-mapping>
