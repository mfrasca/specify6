<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.SpecifyUser" table="specifyuser" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="specifyUserId" type="java.lang.Long" column="SpecifyUserID">
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>

    <property name="name" type="java.lang.String" column="Name" length="64" not-null="true" unique="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>

    <property name="email" type="java.lang.String" column="EMail" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>
    
    <property name="userType" type="java.lang.String" column="UserType" length="32" not-null="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>
    
    <property name="privLevel" type="short" column="PrivLevel" not-null="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>

    <!-- Associations -->

    <!-- bi-directional one-to-many association to CollectionObjDef -->
    <set name="collectionObjDefs" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef"/>
    </set>
    
    <!-- bi-directional one-to-many association to Workbench -->
    <set name="workbenches" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.Workbench"/>
    </set>    

    <!-- bi-directional one-to-many association to RecordSet -->
    <set name="recordSets" lazy="true" inverse="true" cascade="delete">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.RecordSet"/>
    </set>
    
     <!-- bi-directional one-to-many association to AppResource -->
    <set name="appResources" lazy="true" inverse="true" cascade="delete">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AppResource"/>
    </set>   

    
     <!-- bi-directional many-to-many association to UserGroup -->
    <set name="userGroup" table="sp_usergroup" cascade="save-update, lock, merge" outer-join="true"  >
    	<meta attribute="field-description"></meta>
    	<key column="SpecifyUserID"/>
    	<many-to-many column="UserGroupID" class="edu.ku.brc.specify.datamodel.UserGroup"/>
    </set>
    
    <!-- bi-directional one-to-many association to AppResourceDefault -->
    <set name="appResourceDefaults" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AppResourceDefault"/>
    </set>

    <!-- bi-directional one-to-one association to Agent -->
    <!-- <one-to-one name="agent" class="edu.ku.brc.specify.datamodel.Agent" >
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </one-to-one> -->

    <!-- bi-directional many-to-one association to Agent -->
    <many-to-one name="Agent" class="edu.ku.brc.specify.datamodel.Agent" outer-join="true" cascade="save-update, lock, merge">
        <meta attribute="field-description"></meta>
        <column name="AgentID"  />
    </many-to-one>
    
    <!-- bi-directional one-to-many association to UserPermission -->
    <set name="userPermissions" lazy="true" inverse="true" cascade="all-delete-orphan">
        <meta attribute="field-description"></meta>
        <key>
            <column name="SpecifyUserID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.UserPermission"/>
    </set>    
    
</class>
</hibernate-mapping>
