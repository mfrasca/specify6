<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.AttributeDef" table="attributedef" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="attributeDefId" type="java.lang.Long" column="AttributeDefID">
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>

    <!--
        Indicates whether it is for 
        0 - Habtitat
        1 - Biological
        2 - Preparation
        3 - External Resource
    -->
    <property name="tableType" type="short" column="TableType">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="fieldName" type="java.lang.String" column="FieldName" length="32">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <property name="dataType" type="short" column="DataType">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <!-- Associations -->
    
    <!-- many-to-one association to CollectionObjDef -->
    <many-to-one name="collectionObjDef" class="edu.ku.brc.specify.datamodel.CollectionObjDef"  cascade="none" outer-join="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="CollectionObjDefID" not-null="true"/>
    </many-to-one>
    
    <!-- many-to-one association to PrepType -->
    <many-to-one name="prepType" class="edu.ku.brc.specify.datamodel.PrepType"  cascade="none" outer-join="auto">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="PrepTypeID" not-null="false"/>
    </many-to-one>
    
    <!-- bi-directional one-to-many association to CollectingEventAttr -->
    <set name="collectingEventAttrs" lazy="true" inverse="true" cascade="delete">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="AttributeDefID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.CollectingEventAttr"/>
    </set>    
        
    <!-- bi-directional one-to-many association to PreparationAttr -->
    <set name="preparationAttrs" lazy="true" inverse="true" cascade="delete">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="AttributeDefID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.PreparationAttr"/>
    </set>    
        
    <!-- bi-directional one-to-many association to CollectionObjectAttr -->
    <set name="collectionObjectAttrs" lazy="true" inverse="true" cascade="delete">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="AttributeDefID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.CollectionObjectAttr"/>
    </set>    
    
</class>
</hibernate-mapping>
