<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.LocationTreeDefItem"
        table="locationtreedefitem" lazy="true">
        <meta attribute="class-description" inherit="false" />

        <id name="locationTreeDefItemId" type="java.lang.Long"
            column="LocationTreeDefItemID" length="10">
            <meta attribute="scope-field">protected</meta>
            <generator class="native" />
		</id>

        <property name="name" type="java.lang.String" column="Name"
            length="64">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="remarks" type="java.lang.String"
            column="Remarks" length="255">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="rankId" type="java.lang.Integer"
            column="RankID">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="isEnforced" type="java.lang.Boolean"
            column="IsEnforced">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="isInFullName" type="java.lang.Boolean"
            column="IsInFullName">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="textBefore" type="java.lang.String" length="64" column="TextBefore"/>
        <property name="textAfter" type="java.lang.String" length="64" column="TextAfter"/>
        <property name="fullNameSeparator" type="java.lang.String" length="32" column="FullNameSeparator"/>

        <!-- Associations -->

        <!-- bi-directional many-to-one association to TreeDef -->
        <many-to-one name="treeDef" column="LocationTreeDefID"
            class="edu.ku.brc.specify.datamodel.LocationTreeDef" lazy="false">
            <meta attribute="scope-field">protected</meta>
        </many-to-one>

        <many-to-one name="parent" column="ParentItemID"
            class="edu.ku.brc.specify.datamodel.LocationTreeDefItem"
            cascade="save-update" lazy="false">
            <meta attribute="scope-field">protected</meta>
        </many-to-one>

        <set name="treeEntries" table="location" inverse="true"
            lazy="true">
            <meta attribute="scope-field">protected</meta>
            <key column="LocationTreeDefItemID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Location" />
        </set>

        <set name="children" table="locationtreedefitem" inverse="true"
            lazy="false">
            <meta attribute="scope-field">protected</meta>
            <key column="ParentItemID" />
            <one-to-many
                class="edu.ku.brc.specify.datamodel.LocationTreeDefItem" />
        </set>

    </class>

</hibernate-mapping>
