<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.UserGroup" table="usergroup" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="userGroupId" type="java.lang.Long" column="UserGroupID">
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>
    
    <property name="name" type="java.lang.String" column="Name" unique="true" length="64" not-null="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <!-- Associations -->

    <!-- bi-directional many-to-many association to SpecifyUser -->
    <set name="specifyUsers" table="sp_usergroup" inverse="true" >
    	<meta attribute="field-description"></meta>
    	<key column="UserGroupID"/>
    	<many-to-many column="SpecifyUserID" class="edu.ku.brc.specify.datamodel.SpecifyUser"/>
    </set>
      
    <!-- bi-directional one-to-many association to Workbench -->
    <set name="workbenches" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="UserGroupID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.Workbench"/>
    </set>     
    
    <!-- bi-directional one-to-many association to RecordSet -->
    <set name="recordsets" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="UserGroupID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.RecordSet"/>
    </set> 
     
    <!-- bi-directional one-to-many association to AppResource -->
    <set name="appResources" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="UserGroupID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AppResource"/>
    </set> 
          
</class>
</hibernate-mapping>
