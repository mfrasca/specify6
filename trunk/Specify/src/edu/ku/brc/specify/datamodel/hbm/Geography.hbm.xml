<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
    
    <class name="edu.ku.brc.specify.datamodel.Geography"
        table="geography" lazy="true">
        
        <id name="geographyId" type="java.lang.Long" column="GeographyID">
            <generator class="native" />
		</id>
		
        <timestamp name="timestampModified" column="TimestampModified"/>
        
        <property name="name" type="java.lang.String" column="Name" length="128"/>

        <property name="fullName" type="java.lang.String" column="FullName" length="255"/>

        <property name="remarks" type="java.lang.String" column="Remarks" length="255"/>
        
        <property name="commonName" type="java.lang.String" column="CommonName" length="128"/>
        
        <property name="geographyCode" type="java.lang.String" column="GeographyCode" length="8"/>
        
        <property name="rankId" type="java.lang.Integer" column="RankID" length="10" not-null="true"/>
        
        <property name="nodeNumber" type="java.lang.Integer" column="NodeNumber" length="10"/>
        
        <property name="highestChildNodeNumber" type="java.lang.Integer" column="HighestChildNodeNumber" length="10"/>
        
        <property name="abbrev" type="java.lang.String" column="Abbrev" length="16"/>
        
        <property name="text1" type="java.lang.String" column="Text1" length="32"/>
        
        <property name="text2" type="java.lang.String" column="Text2" length="32"/>
        
        <property name="number1" type="java.lang.Integer" column="Number1" length="10"/>
        
        <property name="number2" type="java.lang.Integer" column="Number2" length="10"/>
        
        <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23"/>
        
        <property name="timestampVersion" type="java.sql.Timestamp" column="TimestampVersion" length="16"/>
        
        <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50"/>
        
        <property name="isCurrent" type="java.lang.Boolean" column="IsCurrent"/>
        
        <!-- Associations -->
        
        <!-- bi-directional one-to-many association to Locality -->
        <set name="localities" lazy="true" inverse="true" cascade="none">
            <key column="GeographyID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Locality" />
        </set>
        
        <!-- bi-directional many-to-one association to GeographyTreeDef -->
        <many-to-one name="definition" class="edu.ku.brc.specify.datamodel.GeographyTreeDef"
        	lazy="false" not-null="true" outer-join="true">
            <column name="GeographyTreeDefID" />
        </many-to-one>
        
        <!-- bi-directional many-to-one association to GeographyTreeDefItem -->
        <many-to-one name="definitionItem" class="edu.ku.brc.specify.datamodel.GeographyTreeDefItem"
            lazy="false" not-null="true" outer-join="true">
            <column name="GeographyTreeDefItemID" />
        </many-to-one>
        
        <!-- bi-directional many-to-one association to Geography -->
        <many-to-one name="parent" class="edu.ku.brc.specify.datamodel.Geography"
            outer-join="true" cascade="save-update" lazy="false">
            <column name="ParentID" />
        </many-to-one>
        
        <set name="children" inverse="true" cascade="none">
            <key column="ParentId"/>
            <one-to-many class="edu.ku.brc.specify.datamodel.Geography"/>
        </set>
        
    </class>
    
</hibernate-mapping>
