<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

<class 
    name="edu.ku.brc.specify.datamodel.TaxonomyTreeDef"
    table="taxonomytreedef"
	lazy="true"	
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="taxonomytreedef"
    </meta>

    <id
        name="taxonomyTreeDefId"
        type="java.lang.Integer"
        column="TaxonomyTreeDefID"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="assigned"
            type="java.lang.Integer"
            column="TaxonomyTreeDefID"

        </meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native" />
    </id>
    
    <property
        name="name"
        type="java.lang.String"
        column="Name"
        length="50"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="Name"
            length="50"
        </meta>    
    </property>
    
    <property
        name="treeNodeId"
        type="java.lang.Integer"
        column="TreeNodeID"
        length="10"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="TreeNodeID"
            length="10"
        </meta>    
    </property>

    <property
        name="parentNodeId"
        type="java.lang.Integer"
        column="ParentNodeID"
        length="10"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="ParentNodeID"
            length="10"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to Taxon -->
    <set
        name="children"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="TaxonomyTypeID"

           @hibernate.collection-one-to-many
            class="edu.ku.brc.specify.datamodel.Taxon"
        </meta>
        <key>
            <column name="TaxonomyTypeID" />
        </key>
        <one-to-many 
            class="edu.ku.brc.specify.datamodel.Taxon"
        />
    </set>
    
    <!-- bi-directional many-to-one association to CollectionObjDef -->
    <many-to-one
        name="collectionObjDef"
        class="edu.ku.brc.specify.datamodel.CollectionObjDef"
        not-null="true"
		outer-join="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="CollectionObjDefID"         
        </meta>
        <column name="CollectionObjDefID" />
    </many-to-one>

</class>
</hibernate-mapping>
