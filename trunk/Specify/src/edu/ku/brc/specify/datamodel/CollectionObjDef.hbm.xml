<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

<class
    name="edu.ku.brc.specify.datamodel.CollectionObjDef"
    table="collectionobjdef"
	lazy="true"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="collectionobjdef"
    </meta>

    <id
        name="collectionObjDefId"
        type="java.lang.Integer"
        column="CollectionObjDefID"
    >
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="Name"
        length="50"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="use-in-tostring">true</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="Name"
            length="50"
        </meta>
    </property>

    <!-- Associations -->

    <!-- many-to-one association to DataType -->
    <many-to-one
        name="dataType"
        class="edu.ku.brc.specify.datamodel.DataType"
        not-null="true"
		outer-join="true"
    >
	<meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="DataTypeID"
        </meta>
        <column name="DataTypeID" />
    </many-to-one>
    
    <!-- bi-directional many-to-many association to CatalogSeries -->
    <set
        name="catalogSeries"
        table="catseries_colobjdef"
        lazy="true"
        inverse="true"
		cascade="save-update">
        <key>
            <column name="CollectionObjDefID" />
        </key>
        <many-to-many class="edu.ku.brc.specify.datamodel.CatalogSeries" column="CatalogSeriesID"/>
    </set>
    
    <!-- bi-directional one-to-many association to TaxonTreeDef -->
    <set
        name="taxonTreeDef"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="TreeDefID"

           @hibernate.collection-one-to-many
            class="edu.ku.brc.specify.datamodel.TaxonTreeDef"
        </meta>
        <key>
            <column name="CollectionObjDefID"/>
        </key>
        <one-to-many 
            class="edu.ku.brc.specify.datamodel.TaxonTreeDef"
        />
    </set>
    
    <!-- many-to-one association to User -->
    <many-to-one
        name="user"
        class="edu.ku.brc.specify.datamodel.User"
        not-null="true"
		outer-join="true"
    >
	<meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="UserID"
        </meta>
        <column name="UserID" />
    </many-to-one>   
    
    <!-- bi-directional one-to-many association to AttributeDef -->
    <set
        name="AttributeDefs"
        lazy="true"
        inverse="true"
		cascade="delete"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="delete"

           @hibernate.collection-key
            column="CollectionObjDefID"

           @hibernate.collection-one-to-many
            class="edu.ku.brc.specify.datamodel.AttributeDef"
        </meta>
        <key>
            <column name="CollectioObjDefID" />
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AttributeDef"/>
    </set>
    
</class>

</hibernate-mapping>
