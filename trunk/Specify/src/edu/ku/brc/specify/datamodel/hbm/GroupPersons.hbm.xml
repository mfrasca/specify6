<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.GroupPersons" table="grouppersons">
    <meta attribute="class-description" inherit="false"/>

    <id name="groupPersonsId" type="java.lang.Integer" column="GroupPersonsID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>
    
    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>
    
    <property name="orderNumber" type="short" column="OrderNumber" not-null="true" unique-key="IX_GroupPersonsOrder">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Agent -->
    <many-to-one name="group" class="edu.ku.brc.specify.datamodel.Agent" cascade="none" unique-key="IX_GroupPersonsOrder">
        <meta attribute="field-description">AgentID of group</meta>
        <column name="GroupID"  not-null="true"/>
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Agent -->
    <many-to-one name="member" class="edu.ku.brc.specify.datamodel.Agent" cascade="save-update, lock, merge">
        <meta attribute="field-description">AgentID of member (member must be of type Person)</meta>
        <column name="MemberID"  not-null="true"/>
    </many-to-one>

</class>
</hibernate-mapping>
