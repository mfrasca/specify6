<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.LocalityCitation" table="localitycitation" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="localityCitationId" type="java.lang.Long" column="LocalityCitationID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>
    
    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to ReferenceWork -->
    <many-to-one name="referenceWork" class="edu.ku.brc.specify.datamodel.ReferenceWork" cascade="save-update" outer-join="true" index="IX_LocalityCitationReferenceWorkID" unique-key="IX_LocalityCitation">
        <meta attribute="field-description">ID of work citing locality</meta>
        <column name="ReferenceWorkID"  not-null="true"/>
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Locality -->
    <many-to-one name="locality" class="edu.ku.brc.specify.datamodel.Locality" outer-join="true" cascade="none" index="IX_LocalityCitationLocalityID" unique-key="IX_LocalityCitation">
        <meta attribute="field-description">ID of locality cited</meta>
        <column name="LocalityID"  not-null="true"/>
    </many-to-one>

</class>
</hibernate-mapping>
