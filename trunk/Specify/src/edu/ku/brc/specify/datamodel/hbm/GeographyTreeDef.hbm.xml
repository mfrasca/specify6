<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="edu.ku.brc.specify.datamodel.GeographyTreeDef"
		table="geographytreedef" lazy="true">
		<meta attribute="class-description" inherit="false" />

		<id name="geographyTreeDefId" type="java.lang.Integer"
			column="GeographyTreeDefID">
			<meta attribute="scope-field">protected</meta>
			<generator class="native" />
		</id>

		<property name="name" type="java.lang.String" column="Name"
			length="64">
			<meta attribute="scope-field">protected</meta>
		</property>

		<property name="remarks" type="java.lang.String"
			column="Remarks" length="255">
			<meta attribute="scope-field">protected</meta>
		</property>

		<!-- Associations -->

		<set name="treeEntries" table="Geography" inverse="true"
			lazy="true">
			<key column="GeographyTreeDefID" />
			<one-to-many class="edu.ku.brc.specify.datamodel.Geography" />
		</set>

		<set name="treeDefItems" table="GeographyTreeDefItem"
			inverse="true" lazy="false" cascade="all-delete-orphan">
			<key column="GeographyTreeDefID" />
			<one-to-many class="edu.ku.brc.specify.datamodel.GeographyTreeDefItem" />
		</set>

		<set name="collObjDefs" table="CollectionObjDef"
			inverse="true">
			<key column="GeographyTreeDefID" />
			<one-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef" />
		</set>

	</class>

</hibernate-mapping>
