<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.DeterminationCitation" table="determinationcitation" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="determinationCitationId" type="java.lang.Long" column="DeterminationCitationID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>
    
    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to ReferenceWork -->
    <many-to-one name="referenceWork" class="edu.ku.brc.specify.datamodel.ReferenceWork"  cascade="save-update"  outer-join="true" index="IX_DeterminationCitationReferenceWorkID" unique-key="IX_DeterminationCitation">
        <meta attribute="field-description">ID of the publication citing the determination</meta>
        <column name="ReferenceWorkID"  not-null="true"/>
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Determination -->
    <many-to-one name="determination" class="edu.ku.brc.specify.datamodel.Determination"  cascade="save-update"  outer-join="true" index="IX_DeterminationCitationDeterminationID" unique-key="IX_DeterminationCitation">
        <meta attribute="field-description">Determination being cited</meta>
        <column name="DeterminationID"  not-null="true"/>
    </many-to-one>

</class>
</hibernate-mapping>
