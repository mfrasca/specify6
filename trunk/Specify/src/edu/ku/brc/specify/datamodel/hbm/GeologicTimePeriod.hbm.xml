<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.GeologicTimePeriod"
        table="geologictimeperiod" lazy="true">

        <id name="geologicTimePeriodId" type="java.lang.Long" column="GeologicTimePeriodID">
            <generator class="native" />
		</id>

        <timestamp name="timestampModified" column="TimestampModified"/>

        <property name="rankId" type="java.lang.Integer" column="RankID" length="10"/>

        <property name="name" type="java.lang.String" column="Name" length="64"/>

        <property name="fullName" type="java.lang.String" column="FullName" length="255"/>

        <property name="remarks" type="java.lang.String" column="Remarks" length="255"/>
        
    	<property name="nodeNumber" type="java.lang.Integer" column="NodeNumber" length="10" update="false"/>

    	<property name="highestChildNodeNumber" type="java.lang.Integer" column="HighestChildNodeNumber" length="10" update="false"/>

        <property name="standard" type="java.lang.String" column="Standard" length="64"/>

        <property name="start" type="java.lang.Float" column="Start" length="24"/>
        
        <property name="StartUncertainty" type="java.lang.Float" column="AgeStartUncertainty" length="24"/>
        
        <property name="end" type="java.lang.Float" column="End" length="24"/>
        
        <property name="endUncertainty" type="java.lang.Float" column="EndUncertainty" length="24"/>
        
        <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23"/>

        <property name="timestampVersion" type="java.sql.Timestamp" column="TimestampVersion" length="16"/>

        <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="32"/>

        <!-- Associations -->

    	<!-- bi-directional many-to-one association to Stratigraphy -->
    	<set name="stratigraphies" lazy="true" inverse="true" cascade="none">
    		<key column="GeologicTimePeriodID"/>
    		<one-to-many class="edu.ku.brc.specify.datamodel.Stratigraphy"/>
    	</set>
    	
    	<!-- bi-directional many-to-one association to GeologicTimePeriodTreeDef -->
    	<many-to-one name="definition" class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDef" 
    		cascade="lock" lazy="false" column="GeologicTimePeriodTreeDefID" not-null="true" outer-join="true"/>
    	
    	<!-- bi-directional many-to-one association to GeologicTimePeriodTreeDefItem -->
    	<many-to-one name="definitionItem" class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem" 
    		cascade="save-update,lock" lazy="false" column="GeologicTimePeriodTreeDefItemID" not-null="true" outer-join="true"/>
    	
    	<!-- bi-directional many-to-one association to GeologicTimePeriod -->
    	<many-to-one name="parent" class="edu.ku.brc.specify.datamodel.GeologicTimePeriod"
    		cascade="save-update,lock" lazy="false" column="ParentID" outer-join="true" />
    	
    	<set name="children" cascade="all" lazy="true" inverse="true">
    		<key column="ParentId"/>
    		<one-to-many class="edu.ku.brc.specify.datamodel.GeologicTimePeriod"/>
    	</set>
    	
    </class>
</hibernate-mapping>
