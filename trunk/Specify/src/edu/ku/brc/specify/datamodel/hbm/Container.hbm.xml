<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Container" table="container" lazy="true">
    <meta attribute="class-description" inherit="false"/>
    
    <id name="containerId" type="java.lang.Long" column="ContainerID">
        <meta attribute="field-description"></meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="collectionObjectId" type="java.lang.Long" column="CollectionObjectID" >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="type" type="short" column="Type">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="name" type="java.lang.String" column="Name" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="description" type="java.lang.String" column="Description" length="255">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="number" type="java.lang.Integer" column="Number">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="field-description"></meta>    
    </property>
    
    <!-- Associations -->

    <!-- bi-directional one-to-many association to ContainerItems -->
    <set name="items" lazy="true" inverse="true" cascade="all-delete-orphan">    
    	<meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta> 
        <key>
            <column name="ContainerID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.ContainerItem"/>
    </set>
    
    <!-- bi-directional many-to-one association to CollectionObject  not-null="false" -->
    <!-- NOTE: We are REALLY modeling a one-to-zero-or-one  -->
    <many-to-one name="container" class="edu.ku.brc.specify.datamodel.CollectionObject" insert="false" update="false" unique="true" cascade="none">
    	<meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="CollectionObjectID" />
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Location -->
    <many-to-one name="location" class="edu.ku.brc.specify.datamodel.Location" cascade="save-update, lock, merge" outer-join="auto">
        <meta attribute="field-description"></meta>
        <column name="LocationID"  not-null="false"/>
    </many-to-one>
    
</class>
</hibernate-mapping>
