<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Permit" table="permit" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="permitId" type="java.lang.Long" column="PermitID">
        <meta attribute="field-description">Primary key</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="permitNumber" type="java.lang.String" column="PermitNumber" not-null="true" length="50" index="IX_Permit">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Identifier for the permit</meta>
    </property>
    
    <property name="type" type="java.lang.String" column="Type" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Permit category - 'CITES', 'Migratory Bird Treaty Act', ...</meta>
    </property>
    
    <property name="issuedDate" type="calendar_date" column="IssuedDate" index="IX_PermitIssueDate">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date permit was issued</meta>
    </property>
    
    <property name="startDate" type="calendar_date" column="StartDate" index="IX_PermitStartDate">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date permit becomes effective</meta>
    </property>
    
    <property name="endDate" type="calendar_date" column="EndDate" index="IX_PermitEndDate">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date permit expires</meta>
    </property>
    
    <property name="renewalDate" type="calendar_date" column="RenewalDate">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date of renewal</meta>
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="text1" type="text" column="Text1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="text2" type="text" column="Text2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number1" type="java.lang.Float" column="Number1" length="24">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number2" type="java.lang.Float" column="Number2" length="24">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="yesNo1" type="boolean" column="YesNo1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="yesNo2" type="boolean" column="YesNo2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>



    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to AccessionAuthorizations -->
    <set name="accessionAuthorizations" lazy="true" inverse="true" cascade="save-update">
        <meta attribute="field-description"></meta>
        <key>
            <column name="PermitID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.AccessionAuthorizations"/>
    </set>
    
    <!-- bi-directional many-to-one association to Agent not-null="true"-->
    <many-to-one name="issuedTo" class="edu.ku.brc.specify.datamodel.Agent" cascade="save-update" outer-join="true">
        <meta attribute="field-description">AgentID of Issuee</meta>
        <column name="IssuedToID"  />
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Agent not-null="true"-->
    <many-to-one name="issuedBy" class="edu.ku.brc.specify.datamodel.Agent" cascade="save-update" outer-join="true">
        <meta attribute="field-description">AgentID of Issuer</meta>
        <column name="IssuedByID"  />
    </many-to-one>

    <!-- bi-directional one-to-many association to Attachment -->
    <set name="attachments" inverse="true" cascade="all-delete-orphan" order-by="Ordinal ASC, TimestampCreated DESC">
        <key column="PermitID"/>
        <one-to-many class="edu.ku.brc.specify.datamodel.Attachment"/>
    </set>

</class>
</hibernate-mapping>
