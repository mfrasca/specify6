<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.Taxon" table="taxon" lazy="true">

        <id name="taxonId" type="java.lang.Long" column="TaxonID">
            <generator class="native" />
		</id>

        <timestamp name="timestampModified" column="TimestampModified"/>

        <property name="taxonomicSerialNumber" type="java.lang.String" column="TaxonomicSerialNumber" length="50"/>

        <property name="guid" type="java.lang.String" column="GUID" length="255"/>

        <property name="name" type="java.lang.String" column="Name" length="50"/>

        <property name="fullName" type="java.lang.String" column="FullName" length="255"/>

        <property name="remarks" type="java.lang.String" column="Remarks" length="255"/>
        
        <property name="unitInd1" type="java.lang.String" column="UnitInd1" length="50"/>

        <property name="unitName1" type="java.lang.String" column="UnitName1" length="50"/>

        <property name="unitInd2" type="java.lang.String" column="UnitInd2" length="50"/>

        <property name="unitName2" type="java.lang.String" column="UnitName2" length="50"/>

        <property name="unitInd3" type="java.lang.String" column="UnitInd3" length="50"/>

        <property name="unitName3" type="java.lang.String" column="UnitName3" length="50"/>

        <property name="unitInd4" type="java.lang.String" column="UnitInd4" length="50"/>

        <property name="unitName4" type="java.lang.String" column="UnitName4" length="50"/>

        <property name="commonName" type="java.lang.String" column="CommonName" length="128"/>

        <property name="author" type="java.lang.String" column="Author" length="128"/>

        <property name="source" type="java.lang.String" column="Source" length="64"/>

        <property name="groupPermittedToView" type="java.lang.Integer" column="GroupPermittedToView" length="10"/>

        <property name="environmentalProtectionStatus" type="java.lang.String" column="EnvironmentalProtectionStatus" length="64"/>

        <property name="nodeNumber" type="java.lang.Integer" column="NodeNumber" length="10" index="IX_TXN_NodeNumber"/>

        <property name="highestChildNodeNumber" type="java.lang.Integer" column="HighestChildNodeNumber" length="10" index="IX_TXN_HighestChildNodeNumber"/>

        <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23"/>

        <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50"/>

        <property name="accepted" type="short" column="Accepted"/>

        <property name="rankId" type="java.lang.Integer" column="RankID" length="10"/>

        <property name="groupNumber" type="java.lang.String" length="20" column="GroupNumber"/>

        <!-- Associations -->

        <set name="determinations" inverse="true" cascade="none">
            <key column="TaxonID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Determination" />
        </set>

        <!-- bi-directional one-to-many association to Taxon -->
        <set name="acceptedChildren" inverse="true" cascade="none">
            <key column="AcceptedID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Taxon" />
        </set>

        <!-- bi-directional many-to-one association to Taxon -->
        <many-to-one name="acceptedTaxon" class="edu.ku.brc.specify.datamodel.Taxon"
            outer-join="true" column="AcceptedID" />

        <!-- bi-directional one-to-many association to TaxonCitation -->
        <set name="taxonCitations" inverse="true" cascade="none">
            <key column="TaxonID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.TaxonCitation" />
        </set>

        <!-- bi-directional many-to-one association to TaxonTreeDef -->
        <many-to-one name="definition" class="edu.ku.brc.specify.datamodel.TaxonTreeDef"
            not-null="true" outer-join="true" column="TaxonTreeDefID" />

        <!-- bi-directional many-to-one association to TaxonTreeDefItem -->
        <many-to-one name="definitionItem" class="edu.ku.brc.specify.datamodel.TaxonTreeDefItem"
            not-null="true" outer-join="true" column="TaxonTreeDefItemID"/>

        <!-- bi-directional many-to-one association to Taxon -->
        <many-to-one name="parent" class="edu.ku.brc.specify.datamodel.Taxon"
        	outer-join="true" column="ParentID"/>

        <!-- bi-directional one-to-many association to Attachment -->
        <set name="attachments" inverse="true" cascade="save-update">
            <key column="TaxonID"/>
            <one-to-many class="edu.ku.brc.specify.datamodel.Attachment"/>
        </set>

        <set name="children" inverse="true" cascade="none" fetch="join">
            <key column="ParentID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Taxon" />
        </set>

    </class>

</hibernate-mapping>
