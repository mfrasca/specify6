<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Workbench" table="workbench" lazy="false">

    <!-- Common id property. -->
    <id name="workbenchId" type="java.lang.Long" column="WorkbenchID" unsaved-value="null">
        <generator class="native"/>
	</id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="name" column="Name" update="true" type="java.lang.String" length="64">
        <meta attribute="field-description">Name of workbench</meta>
    </property>

    <property name="dbTableId" column="TableID" update="true" type="java.lang.Integer">
    </property>

    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>
      
    <property name="formId" type="java.lang.Integer" column="FormId">
      <meta attribute="scope-field">protected</meta>
    </property>   
      
    <property name="exportInstitutionName" type="java.lang.String" column="ExportInstitutionName" length="128">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Name of Institution being exported from</meta>
    </property>  
    
    <property name="ownerPermissionLevel" type="java.lang.Integer" column="OwnerPermissionLevel">
      <meta attribute="scope-field">protected</meta>
    </property>  
         
    <property name="groupPermissionLevel" type="java.lang.Integer" column="GroupPermissionLevel">
      <meta attribute="scope-field">protected</meta>
    </property>  

    <property name="allPermissionLevel" type="java.lang.Integer" column="AllPermissionLevel">
      <meta attribute="scope-field">protected</meta>
    </property>  

    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
    </property>
    
    <!-- Associations -->
    <!-- bi-directional many-to-one association to WorkbenchTemplate -->
    <many-to-one name="workbenchTemplate" class="edu.ku.brc.specify.datamodel.WorkbenchTemplate" outer-join="true" >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="WorkbenchTemplateID"  not-null="true"/>
    </many-to-one>    
    
    <!-- bi-directional one-to-many association to WorkbenchDataItem -->
    <set name="workbenchItems" lazy="true" inverse="true" cascade="all">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="WorkbenchID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.WorkbenchDataItem"/>
    </set>
    
    <!-- many-to-one association to SpecifyUser -->
    <many-to-one name="specifyUser" class="edu.ku.brc.specify.datamodel.SpecifyUser" outer-join="true">
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="SpecifyUserID" not-null="true"/>
    </many-to-one>       
    
    <!-- many-to-one association to UserGroup -->
    <many-to-one name="group" class="edu.ku.brc.specify.datamodel.UserGroup" outer-join="true">
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <column name="UserGroupID"/>
    </many-to-one> 
        
</class>
</hibernate-mapping>
