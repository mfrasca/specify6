<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Journal" table="journal" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="journalId" type="java.lang.Long" column="JournalID">
        <meta attribute="field-description">Primary key</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning TimeStamp</meta>
    </timestamp>

    <property name="journalName" type="java.lang.String" column="JournalName" length="255">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Full name of the journal</meta>
    </property>
    <property name="journalAbbreviation" type="java.lang.String" column="JournalAbbreviation" length="50" index="IX_JournalAbbreviation">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to ReferenceWork -->
    <set name="referenceWorks" lazy="true" inverse="true" cascade="none">
        <meta attribute="field-description"></meta>
        <key>
            <column name="JournalID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.ReferenceWork"/>
    </set>

</class>
</hibernate-mapping>
