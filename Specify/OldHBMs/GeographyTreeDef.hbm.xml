<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.GeographyTreeDef"
        table="geographytreedef" lazy="true">

        <id name="geographyTreeDefId" type="java.lang.Long"
            column="GeographyTreeDefID">
            <generator class="native" />
		</id>

        <property name="name" type="java.lang.String" column="Name" length="64"/>

        <property name="remarks" type="java.lang.String" column="Remarks" length="255"/>

		<property name="fullNameDirection" type="java.lang.Integer" column="FullNameDirection"/>

        <!-- Associations -->
    	
    	<set name="treeEntries" cascade="save-update,lock" lazy="true" inverse="true">
            <key column="GeographyTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Geography" />
        </set>

    	<set name="treeDefItems" cascade="save-update,lock" lazy="false" inverse="true">
            <key column="GeographyTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.GeographyTreeDefItem" />
        </set>

    	<set name="collObjDefs" cascade="none" lazy="true" inverse="true">
            <key column="GeographyTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef" />
        </set>

    </class>

</hibernate-mapping>
