<?xml version="1.0" encoding="UTF-8"?>
<formatters xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <format
        name="Agent"
        class="edu.ku.brc.specify.datamodel.Agent"
        default="true"
        >
        <switch single="false" field="agentType">
            <fields value="0">
                <field>name</field>
            </fields>
            <fields value="1">
                <field>lastName</field>
                <field sep=", " >firstName</field>
            </fields>
            <fields value="2">
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="CollectionObject"
        class="edu.ku.brc.specify.datamodel.CollectionObject"
        default="true"
        >
        <switch single="true">
            <fields>
                <field format="%.0f" type="float">catalogNumber</field>
            </fields>
        </switch>
    </format>

    <format
        name="Permit"
        class="edu.ku.brc.specify.datamodel.Permit"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>permitNumber</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="AccessionAuthorization"
        class="edu.ku.brc.specify.datamodel.AccessionAuthorization"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>permit.permitNumber</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="AccessionAgent"
        class="edu.ku.brc.specify.datamodel.AccessionAgent"
        default="true"
        >
        <switch single="true">
            <fields>
                <field formatter="Agent">agent</field>
                <field sep=" - ">role</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="Geography"
        class="edu.ku.brc.specify.datamodel.Geography"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="Taxon"
        class="edu.ku.brc.specify.datamodel.Taxon"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>fullName</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="PrepType"
        class="edu.ku.brc.specify.datamodel.PrepType"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="DeterminationStatus"
        class="edu.ku.brc.specify.datamodel.DeterminationStatus"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="DataType"
        class="edu.ku.brc.specify.datamodel.DataType"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="Preparation"
        class="edu.ku.brc.specify.datamodel.Preparation"
        default="true"
        >
        <switch single="true">
            <fields>
                <field formatter="PrepType">prepType</field>
                <field sep=" - "  format="%d" type="int">count</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="Determination"
        class="edu.ku.brc.specify.datamodel.Determination"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>taxon.fullName</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="Collector"
        class="edu.ku.brc.specify.datamodel.Collector"
        default="true"
        >
        <switch single="true">
            <fields>
                <field formatter="Agent">agent</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="LocalityLatitude"
        class="edu.ku.brc.specify.datamodel.Locality"
        default="true"
        >
        <switch single="true">
            <external class="edu.ku.brc.specify.ui.LocalityLatLonFormatter">
                <param name="type">latitude</param>
                <param name="dir">symbol</param>
                <param name="format">DDDDDD</param>
                <param name="which">1</param>
            </external>
        </switch>
    </format>
    
    <format
        name="LocalityLongitude"
        class="edu.ku.brc.specify.datamodel.Locality"
        default="true"
        >
        <switch single="true">
            <external class="edu.ku.brc.specify.ui.LocalityLatLonFormatter">
                <param name="type">longitude</param>
                <param name="dir">symbol</param>
                <param name="format">DDDDDD</param>
                <param name="which">1</param>
            </external>
        </switch>
    </format>
    
    <format
        name="Locality"
        class="edu.ku.brc.specify.datamodel.Locality"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>localityName</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="CollectionObjDef"
        class="edu.ku.brc.specify.datamodel.CollectionObjDef"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="GeologicTimePeriodTreeDef"
        class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDef"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>name</field>
            </fields>
        </switch>
    </format>
    
    <format
        name="CatalogNumberingScheme"
        class="edu.ku.brc.specify.datamodel.CatalogNumberingScheme"
        default="true"
        >
        <switch single="true">
            <fields>
                <field>schemeName</field>
            </fields>
        </switch>
    </format>
    
    
    
    <aggregators>
        <aggregator name="AccessionAuthorization" class="edu.ku.brc.specify.datamodel.AccessionAuthorization" separator="; " count="" ending="" format="AccessionAuthorization" default="true"/>
        <aggregator name="AccessionAgent"         class="edu.ku.brc.specify.datamodel.AccessionAgent" separator="; " count="" ending="" format="AccessionAgent" default="true"/>   
        <aggregator name="Preparation"             class="edu.ku.brc.specify.datamodel.Preparation" separator="; " count="" ending="" format="Preparation" default="true"/>   
        <aggregator name="Determination"           class="edu.ku.brc.specify.datamodel.Determination" separator="; " count="1" ending="" format="Determination" default="true"/>   
        <aggregator name="Collector"              class="edu.ku.brc.specify.datamodel.Collector" separator="; " count="" ending="" format="Collector" default="true"/>   
    </aggregators>
    
     
</formatters>


