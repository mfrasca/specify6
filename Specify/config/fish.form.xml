            gettable="edu.ku.brc.specify.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.specify.ui.forms.DataSetterForObj">

            <desc><![CDATA[The Collection Object form.]]></desc>
            <enableRules/>

            <columnDef>100px,3dlu,p,3dlu,80px,3dlu,p,3dlu,60px,3dlu,p,p:g</columnDef>
    		<rowDef>p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,10dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p,2dlu,p</rowDef>

    		<rows>
    			<row>
    				<cell type="separator" label="KU Fish" colspan="12"/>
    			</row>
    			<row>
    			    <cell type="label" labelfor="catalogNumber" label="Catalog Number"/>
    				<cell type="field" name="catalogNumber" format="%.0f"/>

                    <cell type="label" labelfor="catalogSeries.seriesName" label="Catalog Series"/>
    				<cell type="field" uitype="text" name="catalogSeries.seriesName"/>
    			</row>
    			<row>
                 <cell type="label" labelfor="accession" label="Accession #"/>
    				<cell type="field" name="accession" uitype="formattedtext" uifieldformatter="AccessionNumber"/>

                 <cell type="label" labelfor="cataloger" label="Cataloger"/>
    				<cell type="field" name="cataloger" uitype="querycbx" initialize="Agent" formatname="Agent" isrequired="true"/>

                    <cell type="label" labelfor="catalogedDate" label="Date"/>
    			    <cell type="field" name="catalogedDate" uitype="formattedtext" uifieldformatter="Date"/>
    			</row>
     			<row>
    				<cell type="separator" label="Determination" colspan="12"/>
    			</row>

    			<row>
    				<cell type="subview" viewname="Determination" name="determinations" colspan="12"/>
    			</row>

    			<row>
    				<cell type="separator" label="Locality" colspan="12"/>
    			</row>
    			<row>
                    <cell type="label" labelfor="fieldNumber" label="Field No"/>
    				<cell type="field" name="fieldNumber"/>

                    <cell type="label" labelfor="collectingEvent.locality.localityName" label="Locality"/>
    				<cell type="field" name="collectingEvent.locality.localityName" cols="41" colspan="6"/>
    			</row>

    			<row>
    				<cell type="separator" label="Preparations" colspan="12"/>
    			</row>
    			<row>
    			    <cell type="subview" viewname="Preparation" name="preparations" colspan="12"/>
    			</row>

    			<row>
    				<cell type="separator" label="" colspan="12"/>
    			</row>
    			<row>
                    <cell type="label" labelfor="lastEditedBy" label="Edited By"/>
    				<cell type="field" name="lastEditedBy"/>

                    <cell type="label" labelfor="timestampModified" label="Last Edited"/>
    				<cell type="field" name="timestampModified" cols="20" colspan="2"/>
    			</row>
    		</rows>
    	</viewdef>

