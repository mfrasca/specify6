                    <cell type="label" labelfor="endDate" label="End Date"/>
                    <cell type="field" name="endDate"/>
                </row>

                <row>
                    <cell type="label" labelfor="remarks" label="Remarks"/>
                    <cell type="field" name="remarks" uitype="textarea" colspan="9" cols="50"/>
                </row>

            </rows>
