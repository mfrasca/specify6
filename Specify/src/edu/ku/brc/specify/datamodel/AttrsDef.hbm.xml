<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="edu.ku.brc.specify.datamodel.AttrsDef" 
    table="attrsdef"
	lazy="true"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="attrsdef"
    </meta>

    <id
        name="attrsDefId"
        type="java.lang.Integer"
        column="AttrsDefID"
    >
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>

    <!--
		Indicates whether it is for 
		0 - Habtitat
		1 - Biological
		2 - External Resource
	-->
    <property
        name="tableType"
        type="short"
        column="TableType"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="TableType"
        </meta>    
    </property>
	
	<!--
		This is needed for Preparations because
		there can be different PrepTypes that can have
		their own set of Attrs
    -->
    <property
        name="subType"
        type="short"
        column="SubType"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="SubType"
        </meta>    
    </property>
	
    <property
        name="fieldName"
        type="java.lang.String"
        column="FieldName"
        length="32"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="FieldName"
            length="32"
        </meta>    
    </property>

    <property
        name="dataType"
        type="short"
        column="DataType"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="DataType"
        </meta>    
    </property>
    
    <!-- Associations -->
    
    <!-- many-to-one association to CollectionObjDef -->
    <many-to-one
        name="collectionObjDefID"
        class="edu.ku.brc.specify.datamodel.CollectionObjDef"
        not-null="true"
		outer-join="true"
    >
	    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="CollectionObjDefID"
        </meta>
        <column name="CollectionObjDefID" />
    </many-to-one>
    
</class>
</hibernate-mapping>
