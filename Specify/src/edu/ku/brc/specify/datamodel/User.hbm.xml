<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

<class 
    name="edu.ku.brc.specify.datamodel.User"
    table="usysusers"
lazy="true"	
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="usysusers"
    </meta>

    <id
        name="userId"
        type="java.lang.Integer"
        column="userID"
    >
      <meta attribute="scope-set">public</meta>
      <meta attribute="scope-field">protected</meta>
      <generator class="native"/>
    </id>
    
    <property
        name="name"
        type="java.lang.String"
        column="Name"
        length="64"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="Name"
            length="64"
        </meta>    
    </property>
    
    <property
        name="password"
        type="java.lang.String"
        column="Password"
        length="64"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="Password"
            length="64"
        </meta>    
    </property>
    
    <property
        name="privLevel"
        type="java.lang.Integer"
        column="PrivLevel"
        length="5"
    >
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">
           @hibernate.property
            column="PrivLevel"
            length="5"
        </meta>    
    </property>    
    
    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to CollectionObjDef -->
    <set
        name="collectionObjDef"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="CollectionObjDefID"

           @hibernate.collection-one-to-many
            class="edu.ku.brc.specify.datamodel.CollectionObjDef"
        </meta>
        <key>
            <column name="CollectionObjDefID" />
        </key>
        <one-to-many 
            class="edu.ku.brc.specify.datamodel.CollectionObjDef"
        />
    </set>
    

</class>
</hibernate-mapping>
