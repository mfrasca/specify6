<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Locality" table="locality" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="localityId" type="java.lang.Long" column="LocalityID">
        <meta attribute="field-description">Primary key</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning TimeStamp</meta>
    </timestamp>

    <property name="namedPlace" type="java.lang.String" column="NamedPlace" length="255" index="IX_LocalityNamedPlace">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The named place the locality is closest to</meta>
    </property>
    
    <property name="relationToNamedPlace" type="java.lang.String" column="RelationToNamedPlace" length="120">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Relation of the locality to the named place</meta>
    </property>
    
    <property name="localityName" type="java.lang.String" column="LocalityName" not-null="true" length="255" index="IX_Locality">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The full name of the locality.</meta>
    </property>
    
    <property name="baseMeridian" type="java.lang.String" column="BaseMeridian" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">BaseMeridian for the Range/Township/Section data</meta>
    </property>
    
    <property name="range" type="java.lang.String" column="Range" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The Range of a legal description</meta>
    </property>
    
    <property name="rangeDirection" type="java.lang.String" column="RangeDirection" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="township" type="java.lang.String" column="Township" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The Township of a legal description</meta>
    </property>
    
    <property name="townshipDirection" type="java.lang.String" column="TownshipDirection" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="section" type="java.lang.String" column="Section" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The Section of a legal description</meta>
    </property>
    
    <property name="sectionPart" type="java.lang.String" column="SectionPart" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="verbatimElevation" type="java.lang.String" column="VerbatimElevation" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The verbatim elevation including units as given in the field notes</meta>
    </property>
    
    <property name="originalElevationUnit" type="java.lang.String" column="OriginalElevationUnit" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">i.e. Meters, Feet, ...</meta>
    </property>
    
    <property name="minElevation" type="java.lang.Double" column="MinElevation" index="IX_LocalityMinElev">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The minimum elevation in Meters</meta>
    </property>
    
    <property name="maxElevation" type="java.lang.Double" column="MaxElevation" index="IX_LocalityMaxElev">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The maximum elevation in Meters</meta>
    </property>
    
    <property name="elevationMethod" type="java.lang.String" column="ElevationMethod" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The method used to determine the elevation</meta>
    </property>
    
    <property name="elevationAccuracy" type="java.lang.Double" column="ElevationAccuracy">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">plus or minus -- in meters</meta>
    </property>
    
    <property name="originalLatLongUnit" type="java.lang.Integer" column="OriginalLatLongUnit" length="10">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">i.e. Decimal, Deg/Min/Sec, ...</meta>
    </property>
    
    <property name="latLongType" type="java.lang.String" column="LatLongType" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The type of area described by the lat long data (Point,Line,Rectangle)</meta>
    </property>
    
    <property name="latitude1" type="java.lang.Double" column="Latitude1" index="IX_LocalityLat1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Latitude of first point</meta>
    </property>
    
    <property name="longitude1" type="java.lang.Double" column="Longitude1" index="IX_LocalityLong1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Longitude of first point</meta>
    </property>
    
    <property name="latitude2" type="java.lang.Double" column="Latitude2" index="IX_LocalityLat2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Latitude of second point</meta>
    </property>
    
    <property name="longitude2" type="java.lang.Double" column="Longitude2" index="IX_LocalityLong2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Longitude of second point</meta>
    </property>
    
    <property name="latLongMethod" type="java.lang.String" column="LatLongMethod" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">the method used to determine the LatitudeLongitude</meta>
    </property>
    
    <property name="latLongAccuracy" type="java.lang.Double" column="LatLongAccuracy">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">radius -- in decimal degrees</meta>
    </property>
    
    <property name="datum" type="java.lang.String" column="Datum" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">GPSDatum</meta>
    </property>
    
    <property name="groupPermittedToView" type="java.lang.Integer" column="GroupPermittedToView" length="10" index="IX_LocalityGPV">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The name of the group that this record is visible to. (Default to public)</meta>
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="text1" type="text" column="Text1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="text2" type="text" column="Text2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number1" type="java.lang.Double" column="Number1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number2" type="java.lang.Double" column="Number2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date the record was created</meta>
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50" index="IX_Locality_2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Name of the person last editing the record</meta>
    </property>
    
    <property name="yesNo1" type="boolean" column="YesNo1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="yesNo2" type="boolean" column="YesNo2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>

    <property name="lat1text" type="java.lang.String" column="Lat1Text" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lat2text" type="java.lang.String" column="Lat2Text" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="long1text" type="java.lang.String" column="Long1Text" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="long2text" type="java.lang.String" column="Long2Text" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="nationalParkName" type="java.lang.String" column="NationalParkName" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
   
    
    <!-- Pulled from Geography -->
    <property name="islandGroup" type="java.lang.String" column="IslandGroup" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="island" type="java.lang.String" column="Island" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="waterBody" type="java.lang.String" column="WaterBody" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="drainage" type="java.lang.String" column="Drainage" length="64">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
    
    <!-- bi-directional many-to-many association to CollectionObjDef -->
    <set name="collectionObjDefs" table="colobjdef_locality" lazy="true" cascade="save-update">
        <key>
            <column name="LocalityID"/>
        </key>
        <many-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef" column="CollectionObjDefID"/>
    </set>   
  
    <!-- bi-directional many-to-one association to Geography -->
    <many-to-one name="geography" class="edu.ku.brc.specify.datamodel.Geography" cascade="save-update" not-null="true" outer-join="true" index="IX_LocalityGeographyID">
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Link to Country, State, County, WaterBody, Island, IslandGroup ... info</meta>
        <column name="GeographyID"/>
    </many-to-one>
    
    <!-- bi-directional one-to-many association to LocalityCitation -->
    <set name="localityCitations" lazy="true" inverse="true" cascade="all-delete-orphan">
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="LocalityID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.LocalityCitation"/>
    </set>

    <!-- bi-directional one-to-many association to CollectingEvent -->
    <set name="collectingEvents" lazy="true" inverse="true" cascade="save-update">
    <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>
        <key>
            <column name="LocalityID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.CollectingEvent"/>
    </set>
    
    <!-- bi-directional one-to-many association to Attachment -->
    <set name="attachments" inverse="true" cascade="save-update">
        <key column="LocalityID"/>
        <one-to-many class="edu.ku.brc.specify.datamodel.Attachment"/>
    </set>
    
</class>
</hibernate-mapping>
