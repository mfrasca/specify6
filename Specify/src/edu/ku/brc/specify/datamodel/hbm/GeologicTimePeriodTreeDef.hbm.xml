<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDef"
        table="geologictimeperiodtreedef" lazy="true">
        <meta attribute="class-description" inherit="false" />

        <id name="geologicTimePeriodTreeDefId" type="java.lang.Long"
            column="GeologicTimePeriodTreeDefID">
            <meta attribute="scope-field">protected</meta>
            <generator class="native" />
		</id>

        <property name="name" type="java.lang.String" column="Name"
            length="64">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="remarks" type="java.lang.String"
            column="Remarks" length="255">
            <meta attribute="scope-field">protected</meta>
        </property>

		<property name="fullNameDirection" type="java.lang.Integer" column="FullNameDirection"/>

        <!-- Associations -->

        <set name="treeEntries" table="GeologicTimePeriod"
            inverse="true" lazy="true" cascade="all-delete-orphan">
            <key column="GeologicTimePeriodTreeDefID" />
            <one-to-many
                class="edu.ku.brc.specify.datamodel.GeologicTimePeriod" />
        </set>

        <set name="treeDefItems" table="GeologicTimePeriodTreeDefItem"
            inverse="true" lazy="false" cascade="save-update">
            <key column="GeologicTimePeriodTreeDefID" />
            <one-to-many
                class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem" />
        </set>

        <set name="collObjDefs" table="CollectionObjDef"
            inverse="true" cascade="none">
            <key column="GeologicTimePeriodTreeDefID" />
            <one-to-many
                class="edu.ku.brc.specify.datamodel.CollectionObjDef" />
        </set>

    </class>

</hibernate-mapping>
