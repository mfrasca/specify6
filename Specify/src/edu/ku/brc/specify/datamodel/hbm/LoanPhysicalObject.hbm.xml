<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.LoanPhysicalObject" table="loanphysicalobject" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="loanPhysicalObjectId" type="java.lang.Long" column="LoanPhysicalObjectID">
        <meta attribute="field-description">PrimaryKey</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>

    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>

    <property name="quantity" type="java.lang.Integer" column="Quantity">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">The total number of specimens  loaned (necessary for lots)</meta>
    </property>
    <property name="descriptionOfMaterial" type="java.lang.String" column="DescriptionOfMaterial" length="255">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Description of loaned material (intended to be used for non-cataloged items, i.e. when PreparationID is null)</meta>
    </property>
    <property name="outComments" type="text" column="OutComments">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Comments on item when loaned</meta>
    </property>
    <property name="inComments" type="text" column="InComments">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Comments on item when returned</meta>
    </property>
    <property name="quantityResolved" type="java.lang.Integer" column="QuantityResolved">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Number of specimens returned, deaccessioned or otherwise accounted for. (necessary for Lots)</meta>
    </property>
    <property name="quantityReturned" type="java.lang.Integer" column="QuantityReturned">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Number of specimens returned. (necessary for Lots)</meta>
    </property>
    
    <property name="isResolved" type="boolean" column="IsResolved" not-null="true">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Date the record was created</meta>
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Login name of the user last editing the record</meta>
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Preparation  not-null="true"-->
    <many-to-one name="preparation" class="edu.ku.brc.specify.datamodel.Preparation" cascade="none" outer-join="true">
        <meta attribute="field-description"></meta>
        <column name="PreparationID" />
    </many-to-one>
    
    <!-- bi-directional many-to-one association to Loan -->
    <many-to-one name="loan" class="edu.ku.brc.specify.datamodel.Loan" outer-join="true" cascade="none" index="IX_LoanPhysicalObjectLoanID">
        <meta attribute="field-description">Loan containing the PhysicalObject</meta>
        <column name="LoanID"  not-null="true"/>
    </many-to-one>
    
    <!-- bi-directional one-to-many association to LoanReturnPhysicalObject -->
    <set name="loanReturnPhysicalObjects" lazy="true" inverse="true" cascade="save-update">
        <meta attribute="field-description"></meta>
        <key>
            <column name="LoanPhysicalObjectID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.LoanReturnPhysicalObject"/>
    </set>

</class>
</hibernate-mapping>
