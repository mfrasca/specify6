<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.Location" table="location">

        <id name="locationId" type="java.lang.Long" column="LocationID">
            <generator class="native"/>
		</id>

        <timestamp name="timestampModified" column="TimestampModified"/>

        <property name="name" type="java.lang.String" column="Name" length="128"/>

        <property name="fullName" type="java.lang.String" column="FullName" length="255"/>

        <property name="remarks" type="java.lang.String" column="Remarks" length="255"/>
        
        <property name="rankId" type="java.lang.Integer" column="RankID" length="10"/>

        <property name="nodeNumber" type="java.lang.Integer" column="NodeNumber" length="10" update="false"/>

        <property name="highestChildNodeNumber" type="java.lang.Integer" column="HighestChildNodeNumber" length="10" update="false"/>

        <property name="abbrev" type="java.lang.String" column="Abbrev" length="16"/>

        <property name="text1" type="java.lang.String" column="Text1" length="32"/>

        <property name="text2" type="java.lang.String" column="Text2" length="32"/>

        <property name="number1" type="java.lang.Integer" column="Number1" length="10"/>

        <property name="number2" type="java.lang.Integer" column="Number2" length="10"/>

        <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23"/>

        <property name="timestampVersion" type="java.sql.Timestamp" column="TimestampVersion" length="16"/>

        <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50"/>

        <!-- Associations -->

    	<!-- bi-directional one-to-many association to Preparation -->
    	<set name="preparations" lazy="true" inverse="true" cascade="none">
    		<key column="LocationID"/>
    		<one-to-many class="edu.ku.brc.specify.datamodel.Preparation"/>
    	</set>
    	
    	<!-- bi-directional one-to-many association to Container -->
    	<set name="containers" lazy="true" inverse="true" cascade="none">
    		<key column="LocationID"/>
    		<one-to-many class="edu.ku.brc.specify.datamodel.Container"/>
    	</set>
    	
        <!-- bi-directional many-to-one association to LocationTreeDef -->
        <many-to-one name="definition" class="edu.ku.brc.specify.datamodel.LocationTreeDef" 
        	cascade="lock" lazy="false" column="LocationTreeDefID" not-null="true" outer-join="true"/>

        <!-- bi-directional many-to-one association to LocationTreeDefItem -->
        <many-to-one name="definitionItem" class="edu.ku.brc.specify.datamodel.LocationTreeDefItem" 
        	cascade="save-update,lock" lazy="false" column="LocationTreeDefItemID" not-null="true" outer-join="true"/>

        <!-- bi-directional many-to-one association to Location -->
    	<many-to-one name="parent" class="edu.ku.brc.specify.datamodel.Location"
    		cascade="save-update,lock" lazy="false" column="ParentID" outer-join="true" />

    	<set name="children" cascade="all" lazy="true" inverse="true">
            <key column="ParentId"/>
            <one-to-many class="edu.ku.brc.specify.datamodel.Location"/>
        </set>

    </class>

</hibernate-mapping>
