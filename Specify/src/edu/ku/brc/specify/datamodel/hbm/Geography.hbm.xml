<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
    
    <class name="edu.ku.brc.specify.datamodel.Geography"
        table="geography" lazy="true">
        <meta attribute="class-description" inherit="false" />
        
        <id name="geographyId" type="java.lang.Long" column="GeographyID">
            <meta attribute="scope-field">protected</meta>
            <generator class="native" />
		</id>
		
        <timestamp name="timestampModified" column="TimestampModified">
            <meta attribute="scope-field">protected</meta>
            <meta attribute="field-description">Versioning TimeStamp</meta>
        </timestamp>
        
        <property name="name" type="java.lang.String" column="Name"
            length="128">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="fullName" type="java.lang.String" column="FullName"
            length="255">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="remarks" type="java.lang.String"
            column="Remarks" length="255">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="commonName" type="java.lang.String"
            column="CommonName" length="128">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="geographyCode" type="java.lang.String"
            column="GeographyCode" length="8">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="rankId" type="java.lang.Integer" column="RankID"
            length="10" index="IX_GeoRankID" not-null="true">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="nodeNumber" type="java.lang.Integer"
            column="NodeNumber" length="10" index="IX_GeoNodeNumber">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="highestChildNodeNumber" type="java.lang.Integer"
            column="HighestChildNodeNumber" length="10"
            index="IX_GeoHighestChildNodeNumber">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="abbrev" type="java.lang.String" column="Abbrev"
            length="16">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="text1" type="java.lang.String" column="Text1"
            length="32">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="text2" type="java.lang.String" column="Text2"
            length="32">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="number1" type="java.lang.Integer"
            column="Number1" length="10">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="number2" type="java.lang.Integer"
            column="Number2" length="10">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="timestampCreated" type="java.sql.Timestamp"
            column="TimestampCreated" length="23">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="timestampVersion" type="java.sql.Timestamp"
            column="TimestampVersion" length="16">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="lastEditedBy" type="java.lang.String"
            column="LastEditedBy" length="50">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="isCurrent" type="java.lang.Boolean"
            column="IsCurrent">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <!-- Associations -->
        
        <!-- bi-directional one-to-many association to Locality -->
        <set name="localities" lazy="true" inverse="true"
            cascade="none">
            <meta attribute="scope-field">protected</meta>
            <key>
                <column name="GeographyID" />
            </key>
            <one-to-many class="edu.ku.brc.specify.datamodel.Locality" />
        </set>
        
        <!-- bi-directional many-to-one association to GeographyTreeDef -->
        <many-to-one name="definition"
            class="edu.ku.brc.specify.datamodel.GeographyTreeDef" lazy="false"
            not-null="true" outer-join="true">
            <meta attribute="scope-field">protected</meta>
            <column name="GeographyTreeDefID" />
        </many-to-one>
        
        <!-- bi-directional many-to-one association to GeographyTreeDefItem -->
        <many-to-one name="definitionItem"
            class="edu.ku.brc.specify.datamodel.GeographyTreeDefItem"
            lazy="false" not-null="true" outer-join="true">
            <meta attribute="scope-field">protected</meta>
            <column name="GeographyTreeDefItemID" />
        </many-to-one>
        
        <!-- bi-directional many-to-one association to Geography -->
        <many-to-one name="parent"
            class="edu.ku.brc.specify.datamodel.Geography" not-null="false"
            outer-join="true" cascade="save-update" lazy="false">
            <meta attribute="scope-field">protected</meta>
            <column name="ParentID" />
        </many-to-one>
        
        <set name="children"
            inverse="true"
            cascade="none">
            <key>
                <column name="ParentId" />
            </key>
            <one-to-many class="edu.ku.brc.specify.datamodel.Geography" />
        </set>
        
    </class>
    
</hibernate-mapping>
