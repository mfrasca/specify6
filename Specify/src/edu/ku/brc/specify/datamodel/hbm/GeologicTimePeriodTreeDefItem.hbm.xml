<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem"
        table="geologictimeperiodtreedefitem" lazy="true">
        <meta attribute="class-description" inherit="false" />

        <id name="geologicTimePeriodTreeDefItemId" type="java.lang.Long"
            column="GeologicTimePeriodTreeDefItemID" length="10">
            <meta attribute="scope-field">protected</meta>
            <generator class="native" />
		</id>

        <property name="name" type="java.lang.String" column="Name"
            length="64">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="remarks" type="java.lang.String"
            column="Remarks" length="255">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="rankId" type="java.lang.Integer"
            column="RankID">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="isEnforced" type="java.lang.Boolean"
            column="IsEnforced">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="isInFullName" type="java.lang.Boolean"
            column="IsInFullName">
            <meta attribute="scope-field">protected</meta>
        </property>
        
        <property name="textBefore" type="java.lang.String" length="64" column="TextBefore"/>
        <property name="textAfter" type="java.lang.String" length="64" column="TextAfter"/>
        <property name="fullNameSeparator" type="java.lang.String" length="32" column="FullNameSeparator"/>

        <!-- Associations -->

    	<many-to-one name="treeDef" class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDef" 
    		cascade="save-update,lock" lazy="false" column="GeologicTimePeriodTreeDefID" not-null="true"/>
    	
    	<many-to-one name="parent" class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem"
    		cascade="save-update,lock" lazy="false" column="ParentItemID"/>
    	
    	<set name="treeEntries" lazy="true" inverse="true" cascade="save-update,lock">
    		<key column="GeologicTimePeriodTreeDefItemID" />
    		<one-to-many class="edu.ku.brc.specify.datamodel.GeologicTimePeriod" />
    	</set>
    	
    	<set name="children" inverse="true" lazy="false" cascade="save-update,lock">
    		<key column="ParentItemID" />
    		<one-to-many class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem" />
    	</set>
    	
    </class>

</hibernate-mapping>
