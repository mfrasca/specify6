<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class
		name="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem"
		table="geologictimeperiodtreedefitem" lazy="true">
		<meta attribute="class-description" inherit="false" />

		<id name="geologicTimePeriodTreeDefItemId" type="java.lang.Integer"
			column="GeologicTimePeriodTreeDefItemID" length="10">
			<meta attribute="scope-field">protected</meta>
			<generator class="native" />
		</id>

		<property name="name" type="java.lang.String" column="Name"
			length="64">
			<meta attribute="scope-field">protected</meta>
		</property>

		<property name="rankId" type="java.lang.Integer"
			column="RankID">
			<meta attribute="scope-field">protected</meta>
		</property>

		<property name="isEnforced" type="java.lang.Boolean"
			column="IsEnforced">
			<meta attribute="scope-field">protected</meta>
		</property>

		<!-- Associations -->

		<!-- bi-directional many-to-one association to GeologicTimePeriodTreeDef -->
		<many-to-one name="treeDef" column="TreeDefID"
			class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDef"
			lazy="false">
			<meta attribute="scope-field">protected</meta>
		</many-to-one>

		<many-to-one name="parent" column="ParentItemID"
			class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem"
			cascade="save-update" lazy="false">
			<meta attribute="scope-field">protected</meta>
		</many-to-one>

		<set name="treeEntries" table="GeologicTimePeriod"
			inverse="true" lazy="true">
			<meta attribute="scope-field">protected</meta>
			<key column="GeologicTimePeriodTreeDefItemID" />
			<one-to-many
				class="edu.ku.brc.specify.datamodel.GeologicTimePeriod" />
		</set>

		<set name="children" table="GeologicTimePeriodTreeDefItem"
			inverse="true" lazy="false">
			<meta attribute="scope-field">protected</meta>
			<key column="ParentItemID" />
			<one-to-many
				class="edu.ku.brc.specify.datamodel.GeologicTimePeriodTreeDefItem" />
		</set>

	</class>

</hibernate-mapping>
