<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="edu.ku.brc.specify.datamodel.AppResourceData" table="appresourcedata" lazy="true">
        <meta attribute="class-description" inherit="false"/>
        
        <id name="appResourceDataId" type="java.lang.Integer" column="AppResourceDataID">            
            <meta attribute="scope-field">protected</meta>
            <generator class="native"/>
            <!-- WORKS
            <generator class="foreign">
                <param name="property">viewSetObj</param>
            </generator>
            -->
        </id>
        
        <!-- This is blob because not all databases support CLOB -->
        <property name="data" type="blob" column="data" length="1073741823" not-null="true">
            <meta attribute="scope-field">protected</meta>
        </property>                
        
        <!-- Associations -->
        
        <!-- bi-directional many-to-one association to ViewSetObj -->
        <many-to-one name="appResource" class="edu.ku.brc.specify.datamodel.AppResource" not-null="true" outer-join="true" 
            cascade="none" index="IX_AppResourceDataAppResource_ID">
            <column name="AppResourceID"/>
        </many-to-one>
        
        <!-- bi-directional many-to-one association to ViewSetObj -->
        <many-to-one name="viewSetObj" class="edu.ku.brc.specify.datamodel.ViewSetObj" not-null="true" outer-join="true" 
                     cascade="none" index="IX_AppResourceDataViewSetObj_ID">
            <column name="ViewSetObjID"/>
        </many-to-one>
        
        <!-- <one-to-one name="appResource" class="edu.ku.brc.specify.datamodel.AppResource" property-ref="data" /> -->
        
        <!--
        <one-to-one name="viewSetObj" class="edu.ku.brc.specify.datamodel.ViewSetObj" property-ref="appResourceData"  cascade="all"/>
        -->
        
        <!-- WORKS
        <one-to-one name="viewSetObj"
            class="edu.ku.brc.specify.datamodel.ViewSetObj"
            constrained="true" />
        -->
        
        <!--<one-to-one name="viewSetObj" class="edu.ku.brc.specify.datamodel.ViewSetObj" outer-join="auto" constrained="true" cascade="save-update"/> -->

        
    </class>
</hibernate-mapping>
