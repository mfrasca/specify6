<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.ku.brc.specify.datamodel.LocationTreeDef" table="locationtreedef">
        <meta attribute="class-description" inherit="false" />

        <id name="locationTreeDefId" type="java.lang.Long"
            column="LocationTreeDefID">
            <meta attribute="scope-field">protected</meta>
            <generator class="native" />
		</id>

        <property name="name" type="java.lang.String" column="Name"
            length="64">
            <meta attribute="scope-field">protected</meta>
        </property>

        <property name="remarks" type="java.lang.String"
            column="Remarks" length="255">
            <meta attribute="scope-field">protected</meta>
        </property>

		<property name="fullNameDirection" type="java.lang.Integer" column="FullNameDirection"/>

        <!-- Associations -->

    	<set name="treeEntries" cascade="save-update,lock" lazy="true" inverse="true">
            <key column="LocationTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.Location" />
        </set>

    	<set name="treeDefItems" cascade="save-update,lock" lazy="false" inverse="true">
            <key column="LocationTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.LocationTreeDefItem" />
        </set>

        <set name="collObjDefs" cascade="none" lazy="true" inverse="true">
            <key column="LocationTreeDefID" />
            <one-to-many class="edu.ku.brc.specify.datamodel.CollectionObjDef" />
        </set>

    </class>

</hibernate-mapping>
