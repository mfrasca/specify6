<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>

<class name="edu.ku.brc.specify.datamodel.Borrow" table="borrow" lazy="true">
    <meta attribute="class-description" inherit="false"/>

    <id name="borrowId" type="java.lang.Long" column="BorrowID">
        <meta attribute="field-description">Primary key</meta>
        <meta attribute="scope-field">protected</meta>
        <generator class="native"/>
    </id>
	
    <timestamp name="timestampModified" column="TimestampModified">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">Versioning Timestamp</meta>
    </timestamp>
    
    <property name="invoiceNumber" type="java.lang.String" column="InvoiceNumber" not-null="true" length="50" index="IX_BorrowInvoice">
        <meta attribute="field-description">Lender's loan number</meta>
    </property>
    <property name="receivedDate" type="calendar_date" column="ReceivedDate">
        <meta attribute="field-description">Date material was received</meta>
    </property>
    <property name="originalDueDate" type="calendar_date" column="OriginalDueDate">
        <meta attribute="field-description">Original Due date for loan</meta>
    </property>
    <property name="dateClosed" type="calendar_date" column="DateClosed" length="10">
        <meta attribute="field-description">Date loan was closed</meta>
    </property>
    
    <property name="remarks" type="text" column="Remarks">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="text1" type="text" column="Text1">
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="text2" type="text" column="Text2">
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number1" type="java.lang.Float" column="Number1" length="24">
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="number2" type="java.lang.Float" column="Number2" length="24">
        <meta attribute="field-description">User definable</meta>
    </property>
    
    <property name="timestampCreated" type="java.sql.Timestamp" column="TimestampCreated" length="23" not-null="true" update="false">
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="lastEditedBy" type="java.lang.String" column="LastEditedBy" length="50">
        <meta attribute="field-description"></meta>    
    </property>
    
    <property name="isClosed" type="boolean" column="IsClosed">
        <meta attribute="field-description">False until all material has been returned</meta>
    </property>
    
    <property name="yesNo1" type="boolean" column="YesNo1">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    <property name="yesNo2" type="boolean" column="YesNo2">
        <meta attribute="scope-field">protected</meta>
        <meta attribute="field-description">User definable</meta>
    </property>
    <property name="currentDueDate" type="calendar_date" column="CurrentDueDate">
        <meta attribute="field-description"></meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to BorrowShipment -->
    <!-- Removed and replaced with many-to-many -->
   <!-- <set name="borrowShipments" lazy="true" inverse="true" cascade="all-delete-orphan">
        <meta attribute="field-description"></meta>
        <key>
            <column name="BorrowID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.BorrowShipment"/>
    </set> -->
    
    <!-- bi-directional many-to-many association to Shipment -->
    <set name="shipments" table="borrow_shipment" inverse="true" lazy="true" cascade="save-update, lock, merge">
        <key>
            <column name="BorrowID"/>
        </key>
        <many-to-many class="edu.ku.brc.specify.datamodel.Shipment" column="ShipmentID"/>
    </set>  
     
    <!-- bi-directional one-to-many association to BorrowAgent -->
    <set name="borrowAgents" lazy="true" inverse="true" cascade="all-delete-orphan">
        <meta attribute="field-description"></meta>
        <key>
            <column name="BorrowID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.BorrowAgent"/>
    </set>
    
    <!-- bi-directional one-to-many association to BorrowMaterial -->
    <set name="borrowMaterials" lazy="true" inverse="true" cascade="all-delete-orphan">
        <meta attribute="field-description"></meta>
        <key>
            <column name="BorrowID"/>
        </key>
        <one-to-many class="edu.ku.brc.specify.datamodel.BorrowMaterial"/>
    </set>

</class>
</hibernate-mapping>
