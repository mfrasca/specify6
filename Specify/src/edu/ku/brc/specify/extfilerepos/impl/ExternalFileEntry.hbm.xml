<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="edu.ku.brc.specify.extfilerepos.impl" >

<class name="ExternalFileEntry"
	   table="ExternalFileEntry"
	   lazy="true">

	<!-- Common id property. -->
	<id name="id"
		type="long"
		column="EFE_ID"
		unsaved-value="null">
		<generator class="native"/>
	</id>

	<!-- Unique read only Name -->
	<property   name="name"
	            column="NAME"
				update="false"
				type="string">
	</property>

	<!-- Description -->
	<property   name="descr"
	            column="DESCR"
				update="true"
				type="string">
	</property>

	<!-- MimeType -->
	<property   name="mimeType"
	            column="MIMETYPE"
				update="true"
				type="string">
	</property>

	<!-- External Path to File -->
	<property   name="path"
	            column="PATH"
				update="true"
				type="string">
	</property>

	<!-- We can't change the creation time, so map it with update="false". -->
	<property   name="created"
				column="CREATED"
				type="java.util.Date"
				update="false"
				not-null="true"/>

</class>

</hibernate-mapping>